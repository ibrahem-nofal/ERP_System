@model ERP_System.Models.DelegateMember

@{
    ViewData["Title"] = "حذف مندوب";
}

<div class="modern-container">
    <div class="bg-shapes">
        <div class="shape shape-danger-1"></div>
        <div class="shape shape-danger-2"></div>
    </div>

    <nav class="breadcrumb-modern" data-aos="fade-down">
        <a asp-action="List" class="breadcrumb-item">
            <i class="bi bi-house-door"></i>
            <span>المندوبين</span>
        </a>
        <i class="bi bi-chevron-left"></i>
        <span class="breadcrumb-item active">حذف مندوب</span>
    </nav>

    <div class="delete-layout">
        <div class="glass-card-danger" data-aos="zoom-in">
            <div class="card-header-danger">
                <div class="warning-icon-animated">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <div class="header-text">
                    <h2>تأكيد الحذف</h2>
                    <p>هذا الإجراء لا يمكن التراجع عنه</p>
                </div>
            </div>

            <div class="card-body-modern">
                <div class="alert-warning-modern">
                    <i class="bi bi-shield-exclamation"></i>
                    <div>
                        <strong>تحذير هام</strong>
                        <p>سيتم إزالة جميع الصلاحيات المرتبطة بهذا المندوب</p>
                    </div>
                </div>

                <div class="employee-card">
                    <h4><i class="bi bi-person-circle"></i> تفاصيل المندوب</h4>
                    <div class="detail-grid">
                        <div class="detail-box">
                            <label>اسم الموظف</label>
                            <div class="detail-value">@Html.DisplayFor(model => model.Employee.Name)</div>
                        </div>
                        <div class="detail-box">
                            <label>رقم الموظف</label>
                            <div class="detail-value">@Model.EmpId</div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" id="deleteForm">
                    <input type="hidden" asp-for="EmpId" />
                    <div class="form-actions">
                        <a asp-action="List" class="btn-modern btn-secondary-modern">
                            <span class="btn-icon"><i class="bi bi-arrow-right"></i></span>
                            <span class="btn-text">إلغاء</span>
                        </a>
                        <button type="submit" class="btn-modern btn-danger-modern">
                            <span class="btn-icon"><i class="bi bi-trash"></i></span>
                            <span class="btn-text">تأكيد الحذف</span>
                            <span class="btn-ripple"></span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
        .modern-container {
            padding: 2rem;
            position: relative;
            min-height: 100vh;
        }

        .bg-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
            pointer-events: none;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(60px);
            opacity: 0.3;
            animation: float 20s infinite ease-in-out;
        }

        .shape-danger-1 {
            width: 400px;
            height: 400px;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            top: -200px;
            right: -200px;
        }

        .shape-danger-2 {
            width: 350px;
            height: 350px;
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            bottom: -150px;
            left: 10%;
            animation-delay: 5s;
        }

        @@keyframes float {

            0%,
            100% {
                transform: translate(0, 0) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        .breadcrumb-modern {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 2rem;
            padding: 1rem 1.5rem;
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .breadcrumb-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #64748b;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .breadcrumb-item:hover {
            color: #ef4444;
        }

        .breadcrumb-item.active {
            color: #1e293b;
        }

        .delete-layout {
            max-width: 800px;
            margin: 0 auto;
        }

        .glass-card-danger {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            color: #1e293b;
        }

        .glass-card-danger h1,
        .glass-card-danger h2,
        .glass-card-danger h3,
        .glass-card-danger h4,
        .glass-card-danger h5,
        .glass-card-danger h6 {
            color: #1e293b;
        }

        .card-header-danger {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            padding: 2.5rem;
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .warning-icon-animated {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        .header-text {
            color: white;
        }

        .header-text h2 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 800;
        }

        .header-text p {
            margin: 0.5rem 0 0 0;
            opacity: 0.9;
        }

        .card-body-modern {
            padding: 2.5rem;
        }

        .alert-warning-modern {
            padding: 1.5rem;
            border-radius: 16px;
            background: rgba(251, 191, 36, 0.1);
            border: 2px solid rgba(251, 191, 36, 0.3);
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .alert-warning-modern i {
            font-size: 2rem;
            color: #f59e0b;
        }

        .alert-warning-modern strong {
            display: block;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .alert-warning-modern p {
            color: #64748b;
            margin: 0;
        }

        .employee-card {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .employee-card h4 {
            color: #1e293b;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .detail-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
        }

        .detail-box {
            background: white;
            padding: 1.25rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .detail-box label {
            font-size: 0.85rem;
            color: #94a3b8;
            font-weight: 600;
            display: block;
            margin-bottom: 0.5rem;
        }

        .detail-value {
            font-size: 1.1rem;
            color: #1e293b;
            font-weight: 700;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid rgba(0, 0, 0, 0.05);
        }

        .btn-modern {
            position: relative;
            padding: 1rem 2rem;
            border-radius: 16px;
            border: none;
            font-weight: 700;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            cursor: pointer;
            overflow: hidden;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-danger-modern {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            box-shadow: 0 10px 30px rgba(240, 147, 251, 0.3);
        }

        .btn-danger-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(240, 147, 251, 0.5);
            color: white;
        }

        .btn-secondary-modern {
            background: rgba(0, 0, 0, 0.05);
            color: #64748b;
        }

        .btn-secondary-modern:hover {
            background: rgba(0, 0, 0, 0.1);
            color: #1e293b;
        }

        .btn-ripple {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-modern:active .btn-ripple {
            width: 300px;
            height: 300px;
        }
    </style>
}

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 800, once: true });
        document.getElementById('deleteForm').addEventListener('submit', function (e) {
            if (!confirm('هل أنت متأكد تماماً من حذف هذا المندوب؟')) {
                e.preventDefault();
            }
        });
    </script>
}
