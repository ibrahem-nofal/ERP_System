@model IEnumerable<ERP_System.Models.DelegateMember>

@{
    ViewData["Title"] = "إدارة المندوبين";
}

<div class="modern-container">
    <!-- Animated Background -->
    <div class="bg-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>

    <!-- Hero Header -->
    <div class="hero-header" data-aos="fade-down">
        <div class="hero-content">
            <div class="hero-icon-wrapper">
                <div class="hero-icon">
                    <i class="bi bi-people-fill"></i>
                </div>
            </div>
            <div class="hero-text">
                <h1 class="hero-title">إدارة المندوبين</h1>
                <p class="hero-subtitle">نظام متقدم لإدارة ومتابعة المندوبين المعتمدين</p>
            </div>
        </div>
        <a asp-action="Create" class="btn-modern btn-primary-modern" data-aos="fade-left">
            <span class="btn-icon"><i class="bi bi-plus-lg"></i></span>
            <span class="btn-text">إضافة مندوب</span>
            <span class="btn-shine"></span>
        </a>
    </div>

    <!-- Stats Dashboard -->
    <div class="stats-grid" data-aos="fade-up">
        <div class="stat-card-modern">
            <div class="stat-icon-wrapper">
                <div class="stat-icon bg-gradient-purple">
                    <i class="bi bi-people"></i>
                </div>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Count()</div>
                <div class="stat-label">إجمالي المندوبين</div>
                <div class="stat-trend">
                    <i class="bi bi-graph-up-arrow"></i>
                    <span>نشط</span>
                </div>
            </div>
        </div>

        <div class="stat-card-modern">
            <div class="stat-icon-wrapper">
                <div class="stat-icon bg-gradient-blue">
                    <i class="bi bi-person-check"></i>
                </div>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Count()</div>
                <div class="stat-label">مندوبين معتمدين</div>
                <div class="stat-trend">
                    <i class="bi bi-check-circle-fill"></i>
                    <span>100%</span>
                </div>
            </div>
        </div>

        <div class="stat-card-modern">
            <div class="stat-icon-wrapper">
                <div class="stat-icon bg-gradient-green">
                    <i class="bi bi-activity"></i>
                </div>
            </div>
            <div class="stat-content">
                <div class="stat-value">@Model.Count()</div>
                <div class="stat-label">نشط اليوم</div>
                <div class="stat-trend">
                    <i class="bi bi-arrow-up-right"></i>
                    <span>متاح</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="glass-card" data-aos="fade-up" data-aos-delay="200">
        <div class="card-header-modern">
            <div class="header-left">
                <h3 class="card-title-modern">
                    <i class="bi bi-table"></i>
                    قائمة المندوبين
                </h3>
            </div>
            <div class="header-right">
                <div class="search-box-modern">
                    <i class="bi bi-search"></i>
                    <input type="text" id="searchInput" placeholder="ابحث عن مندوب...">
                </div>
            </div>
        </div>

        <div class="card-body-modern">
            @if (Model.Any())
            {
                <div class="table-wrapper">
                    <table class="modern-table" id="delegatesTable">
                        <thead>
                            <tr>
                                <th><i class="bi bi-person"></i> الموظف</th>
                                <th><i class="bi bi-briefcase"></i> الدور</th>
                                <th><i class="bi bi-telephone"></i> الاتصال</th>
                                <th class="text-center"><i class="bi bi-gear"></i> الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="table-row-animated">
                                    <td>
                                        <div class="user-cell">
                                            <div class="user-avatar">
                                                <span>@(item.Employee?.Name?.Substring(0, 1).ToUpper() ?? "M")</span>
                                                <div class="avatar-status"></div>
                                            </div>
                                            <div class="user-info">
                                                <div class="user-name">@item.Employee?.Name</div>
                                                <div class="user-id">ID: @item.EmpId</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge-modern badge-info">
                                            <i class="bi bi-award"></i>
                                            @item.Employee?.RoleType
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Employee?.Phones != null && item.Employee.Phones.Any())
                                        {
                                            <div class="contact-list">
                                                @foreach (var phone in item.Employee.Phones.Take(2))
                                                {
                                                    <div class="contact-item">
                                                        <i class="bi bi-telephone-fill"></i>
                                                        <span>@phone.Phone</span>
                                                    </div>
                                                }
                                                @if (item.Employee.Phones.Count() > 2)
                                                {
                                                    <div class="contact-more">+@(item.Employee.Phones.Count() - 2) المزيد</div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">لا يوجد</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Delete" asp-route-id="@item.EmpId" class="btn-action btn-delete"
                                            onclick="return confirm('هل أنت متأكد من حذف هذا المندوب؟')">
                                            <i class="bi bi-trash"></i>
                                            <span>حذف</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state-modern">
                    <div class="empty-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <h3>لا توجد بيانات</h3>
                    <p>لم يتم إضافة أي مندوبين بعد</p>
                    <a asp-action="Create" class="btn-modern btn-primary-modern">
                        <span class="btn-icon"><i class="bi bi-plus-lg"></i></span>
                        <span class="btn-text">إضافة مندوب جديد</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
        .modern-container {
            padding: 2rem;
            position: relative;
            min-height: 100vh;
        }

        /* Animated Background */
        .bg-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
            pointer-events: none;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            filter: blur(60px);
            opacity: 0.3;
            animation: float 20s infinite ease-in-out;
        }

        .shape-1 {
            width: 400px;
            height: 400px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            top: -200px;
            right: -200px;
            animation-delay: 0s;
        }

        .shape-2 {
            width: 350px;
            height: 350px;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            bottom: -150px;
            left: 10%;
            animation-delay: 5s;
        }

        .shape-3 {
            width: 300px;
            height: 300px;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            top: 50%;
            left: -150px;
            animation-delay: 10s;
        }

        @@keyframes float {

            0%,
            100% {
                transform: translate(0, 0) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        /* Hero Header */
        .hero-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding: 2rem;
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .hero-content {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .hero-icon-wrapper {
            position: relative;
        }

        .hero-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
            animation: iconPulse 3s infinite;
        }

        @@keyframes iconPulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
                box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6);
            }
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
        }

        .hero-subtitle {
            color: #64748b;
            font-size: 1.1rem;
            margin: 0.5rem 0 0 0;
        }

        /* Modern Button */
        .btn-modern {
            position: relative;
            padding: 1rem 2rem;
            border-radius: 16px;
            border: none;
            font-weight: 600;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            cursor: pointer;
            overflow: hidden;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-primary-modern {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

        .btn-primary-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
            color: white;
        }

        .btn-shine {
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s;
        }

        .btn-modern:hover .btn-shine {
            left: 100%;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card-modern {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            gap: 1.5rem;
            transition: all 0.3s ease;
        }

        .stat-card-modern:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

        .stat-icon-wrapper {
            position: relative;
        }

        .stat-icon {
            width: 70px;
            height: 70px;
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }

        .bg-gradient-purple {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .bg-gradient-blue {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

        .bg-gradient-green {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }

        .stat-value {
            font-size: 2.5rem;
            font-weight: 800;
            color: #1e293b;
        }

        .stat-label {
            color: #64748b;
            font-size: 0.95rem;
            margin-top: 0.25rem;
        }

        .stat-trend {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #10b981;
            font-size: 0.85rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        /* Glass Card */
        .glass-card {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header-modern {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-title-modern {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        /* Modern Search */
        .search-box-modern {
            position: relative;
            display: flex;
            align-items: center;
        }

        .search-box-modern i {
            position: absolute;
            right: 1rem;
            color: #94a3b8;
            font-size: 1.1rem;
        }

        .search-box-modern input {
            padding: 0.75rem 3rem 0.75rem 1.5rem;
            border: 2px solid rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.8);
            font-size: 0.95rem;
            width: 300px;
            transition: all 0.3s ease;
        }

        .search-box-modern input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            background: white;
        }

        /* Modern Table */
        .table-wrapper {
            overflow-x: auto;
        }

        .modern-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 0.5rem;
        }

        .modern-table thead th {
            padding: 1rem 1.5rem;
            text-align: right;
            font-weight: 600;
            color: #64748b;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .modern-table tbody tr {
            background: white;
            transition: all 0.3s ease;
        }

        .modern-table tbody tr:hover {
            transform: scale(1.01);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        }

        .modern-table tbody td {
            padding: 1.25rem 1.5rem;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .modern-table tbody td:first-child {
            border-right: 1px solid rgba(0, 0, 0, 0.05);
            border-top-right-radius: 12px;
            border-bottom-right-radius: 12px;
        }

        .modern-table tbody td:last-child {
            border-left: 1px solid rgba(0, 0, 0, 0.05);
            border-top-left-radius: 12px;
            border-bottom-left-radius: 12px;
        }

        /* User Cell */
        .user-cell {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-avatar {
            position: relative;
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.25rem;
        }

        .avatar-status {
            position: absolute;
            bottom: -2px;
            left: -2px;
            width: 14px;
            height: 14px;
            background: #10b981;
            border: 2px solid white;
            border-radius: 50%;
        }

        .user-name {
            font-weight: 600;
            color: #1e293b;
            font-size: 1rem;
        }

        .user-id {
            color: #94a3b8;
            font-size: 0.85rem;
        }

        /* Badge Modern */
        .badge-modern {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.85rem;
        }

        .badge-info {
            background: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
        }

        /* Contact List */
        .contact-list {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #64748b;
            font-size: 0.9rem;
        }

        .contact-item i {
            color: #10b981;
        }

        .contact-more {
            color: #667eea;
            font-size: 0.85rem;
            font-weight: 600;
        }

        /* Action Button */
        .btn-action {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.85rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
        }

        .btn-delete:hover {
            background: #ef4444;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        /* Empty State */
        .empty-state-modern {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-icon {
            font-size: 5rem;
            color: #cbd5e1;
            margin-bottom: 1.5rem;
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .empty-state-modern h3 {
            color: #64748b;
            margin-bottom: 0.5rem;
        }

        .empty-state-modern p {
            color: #94a3b8;
            margin-bottom: 2rem;
        }
    </style>
}

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true
        });

        // Enhanced search
        document.getElementById('searchInput').addEventListener('keyup', function () {
            const searchValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('#delegatesTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchValue)) {
                    row.style.display = '';
                    row.style.animation = 'fadeIn 0.3s ease';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}
