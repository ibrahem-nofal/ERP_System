@model IEnumerable<ERP_System.Models.DelegateMember>
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>قائمة المندوبين</title>
    <style>
        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-box {
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
            width: 300px;
        }

        .btn-primary {
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            color: #021024;
        }

        .btn-primary:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        .btn-action {
            padding: 5px 10px;
            font-size: 14px;
            margin-left: 5px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-edit {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
        }

        .btn-details {
            background: rgba(6, 182, 212, 0.2);
            color: #06b6d4;
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

        table {
            width: 100%;
            background: rgba(255, 255, 255, 0.04);
            border-radius: 12px;
            overflow: hidden;
            border-collapse: collapse;
        }

        thead {
            background: rgba(255, 255, 255, 0.08);
        }

        th,
        td {
            padding: 15px;
            text-align: right;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        th {
            font-weight: bold;
            color: #06b6d4;
        }

        tbody tr {
            transition: background 0.2s;
        }

        tbody tr:hover {
            background: rgba(255, 255, 255, 0.06);
        }

        .actions {
            display: flex;
            gap: 8px;
            justify-content: flex-start;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #94a3b8;
        }

        .employee-image {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .delete-form {
            display: inline;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>قائمة المندوبين</h1>

        <div class="header-actions">
            <input type="text" id="searchBox" class="search-box" placeholder="بحث عن مندوب...">
            <a href="@Url.Action("Create")" class="btn btn-primary">+ إضافة مندوب جديد</a>
        </div>

        @if (Model != null && Model.Any())
        {
            <table id="delegateTable">
                <thead>
                    <tr>
                        <th>الصورة</th>
                        <th>الاسم</th>
                        <th>نوع الوظيفة</th>
                        <th>رقم الهاتف</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.Employee?.Image != null && item.Employee.Image.EmpImageData != null)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Employee.Image.EmpImageData)"
                                        alt="@item.Employee.Name" class="employee-image">
                                }
                                else
                                {
                                    <div class="employee-image"
                                        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                                }
                            </td>
                            <td>@(item.Employee?.Name ?? "-")</td>
                            <td>@TranslateRole(item.Employee?.RoleType)</td>
                            <td>
                                @if (item.Employee?.Phones != null && item.Employee.Phones.Any())
                                {
                                    @item.Employee.Phones.First().Phone
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                <div class="actions">
                                    <form asp-action="Delete" asp-route-id="@item.EmpId" method="post" class="delete-form"
                                        onsubmit="return confirm('هل أنت متأكد من حذف هذا المندوب؟');">
                                        <button type="submit" class="btn btn-delete">حذف</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-data">
                <p>لا توجد بيانات مندوبين حالياً</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">إضافة أول مندوب</a>
            </div>
        }
    </div>

    <script>
        // Search functionality
        document.getElementById('searchBox').addEventListener('keyup', function () {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('#delegateTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
</body>

</html>

@functions {
    public string TranslateRole(string role)
    {
        if (string.IsNullOrEmpty(role)) return "-";
        return role.ToLower() switch
        {
            "delegate" => "مندوب",
            "employee" => "موظف",
            "manager" => "مدير",
            "admin" => "مسؤول",
            _ => role
        };
    }
}
