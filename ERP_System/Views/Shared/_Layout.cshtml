@{
    Layout = null;
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام ERP</title>

    <!-- Bootstrap RTL -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="wrapper">

        <!-- Sidebar -->
        <aside class="sidebar p-3" id="sidebar">
            <div class="text-center mb-4">
                <h5 class="fw-bold">نظام ERP</h5>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="Dashboard" asp-action="Index" class="nav-link @(currentController == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> لوحة التحكم
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Companies" asp-action="Index" class="nav-link @(currentController == "Companies" ? "active" : "")">
                        <i class="bi bi-building"></i> الشركات
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Warehouses" asp-action="Index" class="nav-link @(currentController == "Warehouses" ? "active" : "")">
                        <i class="bi bi-box-seam"></i> المخازن
                    </a>
                </li>
                <li class="nav-item mb-2"><a asp-controller="Products" asp-action="Index" class="nav-link"><i class="bi bi-grid"></i> الأصناف</a></li>
                <li class="nav-item mb-2"><a asp-controller="Customers" asp-action="Index" class="nav-link"><i class="bi bi-people"></i> العملاء</a></li>
                <li class="nav-item mb-2"><a asp-controller="Suppliers" asp-action="Index" class="nav-link"><i class="bi bi-truck"></i> الموردين</a></li>
                <li class="nav-item mb-2"><a asp-controller="SalesInvoices" asp-action="Index" class="nav-link"><i class="bi bi-receipt"></i> فواتير البيع</a></li>
                <li class="nav-item mb-2"><a asp-controller="PurchaseInvoices" asp-action="Index" class="nav-link"><i class="bi bi-cart-check"></i> فواتير الشراء</a></li>
                <li class="nav-item mb-2"><a asp-controller="Expenses" asp-action="Index" class="nav-link"><i class="bi bi-wallet2"></i> المصروفات</a></li>
                <li class="nav-item mb-2"><a asp-controller="Reports" asp-action="Index" class="nav-link"><i class="bi bi-bar-chart-line"></i> التقارير</a></li>
                <li class="nav-item mb-2"><a asp-controller="Settings" asp-action="Index" class="nav-link"><i class="bi bi-gear"></i> الإعدادات</a></li>
            </ul>

            <h6>ميزات إضافية</h6>
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-shield-lock"></i> الصلاحيات والأدوار</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-arrow-left-right"></i> التحويلات المخزنية</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-arrow-counterclockwise"></i> المرتجعات</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-cash-stack"></i> المقبوضات والمدفوعات</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-journal-text"></i> كشف الحسابات</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-clock-history"></i> سجل العمليات</a></li>
                <li class="nav-item mb-2"><a href="#" class="nav-link"><i class="bi bi-chat-dots"></i> الدعم والتواصل</a></li>
            </ul>
        </aside>

        <!-- Main -->
        <main class="main-content" id="mainContent">
            <nav class="navbar px-4 d-flex align-items-center justify-content-between">

                <!-- Profile section -->
                <div class="d-flex align-items-center">
                    <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" width="45" class="rounded-circle border ms-2">
                    <div class="text-end profile-info">
                        <span class="fw-semibold">أحمد محمد</span>
                        <small>مدير النظام</small>
                    </div>
                </div>

                <!-- Search box -->
                <div class="position-relative flex-grow-1 mx-4" style="max-width: 450px;">
                    <input type="text" class="form-control search-box" placeholder="ابحث هنا...">
                    <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3 text-secondary"></i>
                </div>

                <!-- Notifications + menu -->
                <div class="d-flex align-items-center gap-3">
                    <div class="position-relative">
                        <i class="bi bi-bell fs-5 text-secondary"></i>
                        <span class="notification-badge">3</span>
                    </div>
                    <i id="menuToggle" class="bi bi-list fs-3 menu-toggle"></i>
                </div>
            </nav>

            <div class="p-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const menuToggle = document.getElementById("menuToggle");
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("mainContent");

        menuToggle.addEventListener("click", () => {
            sidebar.classList.toggle("hidden");
            mainContent.classList.toggle("fullwidth");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
