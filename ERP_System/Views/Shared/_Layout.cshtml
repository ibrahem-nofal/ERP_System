@{
    Layout = null;
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام ERP</title>

    <!-- Bootstrap RTL -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* ✅ لون الأيقونة */
        #menuToggle {
            color: #212529;
            cursor: pointer;
            transition: color 0.3s ease, transform 0.2s ease;
        }

        #menuToggle:hover {
            transform: scale(1.1);
        }

        /* ✅ إشعار جذّاب في منتصف الصفحة */
        .app-toast {
            position: fixed;
            top: 25px;
            left: 50%;
            transform: translateX(-50%) translateY(-20px);
            min-width: 350px;
            max-width: 600px;
            padding: 14px 18px;
            border-radius: 14px;
            font-weight: 600;
            color: #fff;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.15);
            z-index: 5000;
            display: flex;
            align-items: center;
            justify-content: space-between;
            opacity: 0;
            transition: all 0.6s ease;
            backdrop-filter: blur(6px);
        }

        .app-toast.show {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }

        .app-toast.hide {
            opacity: 0;
            transform: translateX(-50%) translateY(-40px);
        }

        .app-toast i {
            font-size: 1.3rem;
            margin-left: 10px;
        }

        .app-toast-success {
            background: linear-gradient(135deg, #198754, #43c680);
        }

        .app-toast-error {
            background: linear-gradient(135deg, #dc3545, #ff6b6b);
        }

        .app-toast-warning {
            background: linear-gradient(135deg, #ffc107, #ffd965);
            color: #212529;
        }

        .app-toast-info {
            background: linear-gradient(135deg, #0d6efd, #4ea1ff);
        }

        .app-toast .close-btn {
            background: transparent;
            border: none;
            color: inherit;
            font-size: 1.2rem;
            cursor: pointer;
            margin-left: 10px;
        }
    </style>
</head>

<body>
    <div class="wrapper">

        <!-- Sidebar -->
        <aside class="sidebar p-3" id="sidebar">
            <div class="text-center mb-4">
                <h5 class="fw-bold">
                    <i class="bi bi-grid-3x3-gap-fill text-primary"></i>
                    نظام ERP
                </h5>
                <small class="text-light">نظام متكامل</small>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="Dashboard" asp-action="Index"
                       class="nav-link @(currentController == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> لوحة التحكم
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="DefineEmployee" asp-action="Index"
                       class="nav-link @(currentController == "DefineEmployee" ? "active" : "")">
                        <i class="bi bi-people"></i> إدارة المستخدمين
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="DefineItem" asp-action="Index"
                       class="nav-link @(currentController == "DefineItem" ? "active" : "")">
                        <i class="bi bi-box-seam"></i> المنتجات والمخازن
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="DefineCustomer" asp-action="Index"
                       class="nav-link @(currentController == "DefineCustomer" ? "active" : "")">
                        <i class="bi bi-person-badge"></i> العملاء
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="DefineSupplier" asp-action="Index"
                       class="nav-link @(currentController == "DefineSupplier" ? "active" : "")">
                        <i class="bi bi-truck"></i> الموردين
                    </a>
                </li>
            </ul>

            <h6>المعاملات</h6>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="InvoiceSale" asp-action="List"
                       class="nav-link @(currentController == "InvoiceSale" ? "active" : "")">
                        <i class="bi bi-receipt"></i> فواتير البيع
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="SalePayment" asp-action="List"
                       class="nav-link @(currentController == "SalePayment" ? "active" : "")">
                        <i class="bi bi-cash-coin"></i> سندات القبض
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="InvoicePurchase" asp-action="List"
                       class="nav-link @(currentController == "InvoicePurchase" ? "active" : "")">
                        <i class="bi bi-cart-check"></i> فواتير الشراء
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="PurchasePayment" asp-action="List"
                       class="nav-link @(currentController == "PurchasePayment" ? "active" : "")">
                        <i class="bi bi-cash"></i> سندات الصرف
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="InventoryTransfer" asp-action="List"
                       class="nav-link @(currentController == "InventoryTransfer" ? "active" : "")">
                        <i class="bi bi-arrow-left-right"></i> التحويلات المخزنية
                    </a>
                </li>
            </ul>

            <h6>المحاسبة</h6>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="DefineExpenseName" asp-action="List"
                       class="nav-link @(currentController == "DefineExpenseName" ? "active" : "")">
                        <i class="bi bi-wallet2"></i> المصروفات
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="DefineRevenueName" asp-action="List"
                       class="nav-link @(currentController == "DefineRevenueName" ? "active" : "")">
                        <i class="bi bi-cash-stack"></i> الإيرادات
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="ChartOfAccount" asp-action="List"
                       class="nav-link @(currentController == "ChartOfAccount" ? "active" : "")">
                        <i class="bi bi-journal-text"></i> دليل الحسابات
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="JournalEntry" asp-action="List"
                       class="nav-link @(currentController == "JournalEntry" ? "active" : "")">
                        <i class="bi bi-book"></i> القيود اليومية
                    </a>
                </li>
            </ul>

            <h6>التقارير</h6>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="Reports" asp-action="Sales"
                       class="nav-link @(currentController == "Reports" && ViewContext.RouteData.Values["action"]?.ToString() == "Sales" ? "active" : "")">
                        <i class="bi bi-bar-chart-line"></i> تقارير المبيعات
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Reports" asp-action="Purchases"
                       class="nav-link @(currentController == "Reports" && ViewContext.RouteData.Values["action"]?.ToString() == "Purchases" ? "active" : "")">
                        <i class="bi bi-graph-up"></i> تقارير المشتريات
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Reports" asp-action="Inventory"
                       class="nav-link @(currentController == "Reports" && ViewContext.RouteData.Values["action"]?.ToString() == "Inventory" ? "active" : "")">
                        <i class="bi bi-pie-chart"></i> تقارير المخزون
                    </a>
                </li>
            </ul>

            <h6>الإعدادات</h6>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="Settings" asp-action="Index"
                       class="nav-link @(currentController == "Settings" ? "active" : "")">
                        <i class="bi bi-gear"></i> إعدادات النظام
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="ActivityLog" asp-action="List"
                       class="nav-link @(currentController == "ActivityLog" ? "active" : "")">
                        <i class="bi bi-clock-history"></i> سجل العمليات
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main -->
        <main class="main-content" id="mainContent">
            <nav class="navbar px-4 d-flex align-items-center justify-content-between">

                <!-- Menu Toggle (Right in RTL) -->
                <div class="d-flex align-items-center">
                    <i id="menuToggle" class="bi bi-list fs-3 menu-toggle" style="cursor: pointer;"></i>
                </div>

                <!-- Search box (Center) -->
                <div class="position-relative flex-grow-1 mx-4" style="max-width: 450px;">
                    <input type="text" class="form-control search-box" placeholder="ابحث هنا...">
                    <i class="bi bi-search position-absolute top-50 end-0 translate-middle-y me-3 text-secondary"></i>
                </div>

                <!-- Notifications & Profile (Left in RTL) -->
                <div class="d-flex align-items-center gap-4">

                    <!-- Notifications Dropdown -->
                    <div class="dropdown">
                        <div class="position-relative cursor-pointer" data-bs-toggle="dropdown" aria-expanded="false"
                             style="cursor: pointer;">
                            <i class="bi bi-bell fs-5 text-secondary"></i>
                            <span class="notification-badge">3</span>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                            <li>
                                <h6 class="dropdown-header">الإشعارات</h6>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                                    <i class="bi bi-box-seam text-primary"></i>
                                    <div>
                                        <div class="small fw-bold">تم إضافة منتج جديد</div>
                                        <div class="text-muted x-small" style="font-size: 0.75rem;">منذ 5 دقائق</div>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                                    <i class="bi bi-exclamation-triangle text-warning"></i>
                                    <div>
                                        <div class="small fw-bold">تنبيه مخزون منخفض</div>
                                        <div class="text-muted x-small" style="font-size: 0.75rem;">منذ 1 ساعة</div>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item text-center small text-primary" href="#">عرض الكل</a></li>
                        </ul>
                    </div>

                    <!-- Profile -->
                    <div class="d-flex align-items-center border-start ps-3">
                        <div class="text-end profile-info ms-2">
                            <span class="fw-semibold d-block" style="line-height: 1.2;">أحمد محمد</span>
                            <small class="text-muted">مدير النظام</small>
                        </div>
                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" width="40" height="40"
                             class="rounded-circle border">
                    </div>
                </div>
            </nav>

            <div class="p-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- ✅ إشعار TempData -->
    @if (TempData["Success"] != null || TempData["Error"] != null || TempData["Warning"] != null || TempData["Info"] !=
        null)
    {
        var klass = "app-toast-success";
        var icon = "bi bi-check-circle-fill";
        var msg = "";

        if (TempData["Error"] != null)
        {
            klass = "app-toast-error";
            icon = "bi bi-exclamation-triangle-fill";
            msg = TempData["Error"]!.ToString();
        }
        else if (TempData["Warning"] != null)
        {
            klass = "app-toast-warning";
            icon = "bi bi-exclamation-circle-fill";
            msg = TempData["Warning"]!.ToString();
        }
        else if (TempData["Info"] != null)
        {
            klass = "app-toast-info";
            icon = "bi bi-info-circle-fill";
            msg = TempData["Info"]!.ToString();
        }
        else
        {
            msg = TempData["Success"]!.ToString();
        }

        <div id="appToast" class="app-toast @klass">
            <i class="@icon"></i>
            <span>@msg</span>
            <button type="button" class="close-btn" id="toastCloseBtn">&times;</button>
        </div>
    }

    <!-- ✅ JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const menuToggle = document.getElementById("menuToggle");
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("mainContent");

        // ✅ حفظ واستعادة مكان السكرول في القائمة الجانبية
        if (sidebar) {
            // استعادة المكان عند التحميل
            const scrollPos = localStorage.getItem("sidebarScrollPos");
            if (scrollPos) {
                sidebar.scrollTop = parseInt(scrollPos, 10);
            }

            // حفظ المكان عند السكرول
            sidebar.addEventListener("scroll", () => {
                localStorage.setItem("sidebarScrollPos", sidebar.scrollTop);
            });
        }

        if (menuToggle) {
            menuToggle.addEventListener("click", () => {
                sidebar.classList.toggle("hidden");
                mainContent.classList.toggle("fullwidth");

                // ✅ تغيير لون الأيقونة
                if (sidebar.classList.contains("hidden")) {
                    menuToggle.style.color = "#aaa"; // فضي عند الإخفاء
                } else {
                    menuToggle.style.color = "#212529"; // غامق عند الظهور
                }
            });
        }

        // ✅ Toast notifications
        document.addEventListener("DOMContentLoaded", () => {
            const toastEl = document.getElementById("appToast");
            if (toastEl) {
                setTimeout(() => toastEl.classList.add("show"), 100);
                setTimeout(() => {
                    toastEl.classList.remove("show");
                    toastEl.classList.add("hide");
                    setTimeout(() => toastEl.remove(), 500);
                }, 4000);

                const closeBtn = document.getElementById("toastCloseBtn");
                if (closeBtn) {
                    closeBtn.addEventListener("click", () => {
                        toastEl.classList.add("hide");
                        setTimeout(() => toastEl.remove(), 400);
                    });
                }
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>

</html>
