@model IEnumerable<ERP_System.Models.Customer>

@{
    ViewData["Title"] = "العملاء";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <style>
        /* body {
            background: #0f1724;
            color: #e6eef6;
            font-family: "Segoe UI", Tahoma, sans-serif;
            margin: 0;
            padding: 20px;
        } */

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.02);
            padding: 15px;
            border-radius: 10px;
            gap: 12px;
        }

        .search-box {
            padding: 10px 14px;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.1);
            background: rgba(255,255,255,0.03);
            color: #fff;
            width: 320px;
        }

       

        .btn-primary {
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            color: #021024;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 15px;
            text-align: right;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            vertical-align: middle;
        }

        th {
            background: rgba(255, 255, 255, 0.05);
            color: #06b6d4;
        }

        .btn-action {
            padding: 5px 10px;
            font-size: 14px;
            margin-left: 5px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-edit {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
        }

        .btn-details {
            background: rgba(6, 182, 212, 0.2);
            color: #06b6d4;
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }
        .no-data {
            text-align: center;
            padding: 30px;
            color: #94a3b8;
        }

        @@media (max-width: 800px) {
            .header-actions

        {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            width: 100%;
        }

        }
    </style>
</head>

<body>
    <div class="container">
        <h1>العملاء</h1>

        <div class="header-actions">
            <input type="text" id="searchBox" class="search-box" placeholder="بحث عن عميل ...">
            <a href="@Url.Action("Index")" class="btn btn-primary">+ عميل جديد</a>
        </div>

        <table id="customerTable">
            <thead>
                <tr>
                    <th>الاسم</th>
                    <th>العنوان</th>
                    <th>تاريخ البدء</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.StartDate?.ToString("yyyy/MM/dd")</td>
                            <td>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-action btn-details">تفاصيل</a>
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-action btn-edit">تعديل</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                                      onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                                    <button type="submit" class="btn btn-action btn-delete">حذف</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="no-data">
                            لا يوجد عملاء حالياً
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        // احنا بننتظر تحميل DOM قبل ربط الحدث
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchBox');
            const getRows = () => document.querySelectorAll('#customerTable tbody tr');

            if (!searchInput) return;

            // وظيفة البحث الأساسية: تبحث داخل كل نص الصف
            const doSearch = (term) => {
                const q = term.trim().toLowerCase();
                getRows().forEach(row => {
                    if (q === '') {
                        row.style.display = '';
                        return;
                    }
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(q) ? '' : 'none';
                });
            };

            // ربط حدث الكتابة
            searchInput.addEventListener('keyup', function (e) {
                doSearch(this.value);
            });

            // لو حبيت تبحث بالـ Enter فقط بدل كل ضغطة استخدم:
            // searchInput.addEventListener('keydown', function(e) {
            //   if (e.key === 'Enter') doSearch(this.value);
            // });
        });
    </script>
</body>

</html>
