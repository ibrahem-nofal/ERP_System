@model ERP_System.Models.Customer

@{
    ViewData["Title"] = "تفاصيل العميل";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
        body {
            background: #0f1724;
            color: #e6eef6;
            font-family: "Segoe UI", Tahoma, sans-serif;
            margin: 0;
            padding: 30px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 34px;
            font-weight: bold;
        }

        .details-box {
            background: rgba(255,255,255,0.02);
            padding: 30px;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,0.05);
            box-shadow: 0 10px 30px rgba(0,0,0,0.4);
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 18px 0;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

            .detail-row:last-child {
                border-bottom: none;
            }

        .label {
            color: #94a3b8;
            font-size: 17px;
            font-weight: 600;
        }

        .value {
            font-size: 18px;
            font-weight: bold;
            color: #e6eef6;
            text-align: left;
        }

        .badge {
            padding: 6px 12px;
            background: rgba(255,255,255,0.07);
            border-radius: 8px;
            font-size: 14px;
            margin-left: 5px;
            display: inline-block;
            cursor: pointer;
            user-select: all;
        }

        .badge-muted {
            background: transparent;
            color: #94a3b8;
            border: 1px dashed #94a3b8;
        }

        .actions {
            margin-top: 25px;
            display: flex;
            justify-content: space-between;
        }

        .btn {
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: bold;
            color: #021024;
            text-decoration: none;
            cursor: pointer;
        }

        .btn-edit {
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.3);
            color: #ef4444 !important;
        }

        .btn-back {
            background: rgba(255,255,255,0.05);
            color: #94a3b8 !important;
        }

        @@media (max-width: 700px) {
            .detail-row

        {
            flex-direction: column;
            gap: 8px;
            align-items: flex-start;
        }

        .actions {
            flex-direction: column-reverse;
            gap: 8px;
            align-items: stretch;
        }

        }
    </style>
</head>

<body>
    <div class="container">
        <h1>تفاصيل العميل</h1>

        <div class="details-box">

            <div class="detail-row">
                <span class="label">الاسم:</span>
                <span class="value">@(!string.IsNullOrWhiteSpace(Model?.Name) ? Model.Name : "-")</span>
            </div>

            <div class="detail-row">
                <span class="label">العنوان:</span>
                <span class="value">@(!string.IsNullOrWhiteSpace(Model?.Address) ? Model.Address : "-")</span>
            </div>

            <div class="detail-row">
                <span class="label">تاريخ الميلاد:</span>
                <span class="value">@Model?.BirthDate?.ToString("yyyy/MM/dd") </span>
            </div>

            <div class="detail-row">
                <span class="label">الجنس:</span>
                @{
                    // مرن للتعامل مع int/string/enum
                    string genderText = "-";
                    var raw = Model?.Gender;
                    if (raw != null)
                    {
                        var s = Convert.ToString(raw)?.Trim();
                        if (!string.IsNullOrEmpty(s))
                        {
                            if (int.TryParse(s, out var gi))
                                genderText = (gi == 1) ? "أنثى" : "ذكر";
                            else
                            {
                                var low = s.ToLowerInvariant();
                                if (low == "أنثى" || low == "انثى" || low == "female" || low == "f") genderText = "أنثى";
                                else if (low == "ذكر" || low == "male" || low == "m") genderText = "ذكر";
                                else genderText = s; // fallback: show value
                            }
                        }
                    }
                }
                <span class="value">@genderText</span>
            </div>

            <div class="detail-row">
                <span class="label">تاريخ البدء:</span>
                <span class="value">@Model?.StartDate?.ToString("yyyy/MM/dd") </span>
            </div>

            <div class="detail-row">
                <span class="label">تفاصيل أخرى:</span>
                <span class="value">@(string.IsNullOrWhiteSpace(Model?.OtherDetails) ? "لا توجد تفاصيل" : Model.OtherDetails)</span>
            </div>

            <div class="detail-row" style="align-items:flex-start;">
                <span class="label">أرقام الهواتف:</span>
                <span class="value">
                    @if (Model?.Phones != null && Model.Phones.Any())
                    {
                        foreach (var phone in Model.Phones)
                        {
                            <span class="badge phone-badge">@phone.Phone</span>
                        }
                    }
                    else
                    {
                        <span class="badge badge-muted">لا توجد أرقام</span>
                    }
                </span>
            </div>

        </div>

        <div class="actions">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-edit">تعديل</a>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                  onsubmit="return confirm('هل تريد حذف هذا العميل؟');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-delete">حذف</button>
            </form>

            <a href="@Url.Action("List")" class="btn btn-back">رجوع للقائمة</a>
        </div>

    </div>

    <script>
        // نسخ رقم الهاتف عند الضغط مع تأكيد بصري
        document.querySelectorAll('.phone-badge').forEach(b => {
            b.addEventListener('click', function () {
                const text = this.textContent.trim();
                if (!text) return;
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    navigator.clipboard.writeText(text).then(() => {
                        const prev = this.style.background;
                        this.style.background = 'rgba(16,185,129,0.18)';
                        setTimeout(() => this.style.background = prev || 'rgba(255,255,255,0.07)', 600);
                    }).catch(() => {
                        alert('تم نسخ الرقم: ' + text);
                    });
                } else {
                    const ta = document.createElement('textarea');
                    ta.value = text;
                    document.body.appendChild(ta);
                    ta.select();
                    try { document.execCommand('copy'); alert('تم نسخ الرقم: ' + text); } catch {}
                    ta.remove();
                }
            });
        });
    </script>
</body>

</html>
