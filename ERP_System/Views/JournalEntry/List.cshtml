@model IEnumerable<ERP_System.Models.JournalEntry>

@{
    ViewData["Title"] = "القيود اليومية";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <style>
        /* body {
            background: #0f1724;
            color: #e6eef6;
            font-family: "Segoe UI", Tahoma, sans-serif;
        } */

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.02);
            padding: 15px;
            border-radius: 10px;
        }

        .btn-primary {
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            color: #021024;
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
            overflow: hidden;
        }

        th,
        td {
            padding: 15px;
            text-align: right;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        th {
            background: rgba(255, 255, 255, 0.05);
            color: #06b6d4;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>القيود اليومية</h1>

        <div class="header-actions">
            <span>سجل القيود المحاسبية</span>
            <a href="@Url.Action("Index")" class="btn-primary">+ قيد جديد</a>
        </div>

        <table>
            <thead>
                <tr>
                    <th>رقم القيد</th>
                    <th>التاريخ</th>
                    <th>الوصف</th>
                    <th>المصدر</th>
                    <th>بواسطة</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.CreatedAt.ToString("yyyy/MM/dd")</td>
                            <td>@item.Description</td>
                            <td>@item.SourceType</td>
                            <td>@(item.AssignedByEmployee?.Name ?? "-")</td>
                            <td>
                                <a href="#" class="btn-primary" style="padding: 5px 10px; font-size: 12px;">عرض</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" style="text-align:center; padding: 30px; color: #94a3b8;">
                            لا توجد قيود يومية حالياً
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>
