@model ERP_System.Models.Inventory

@{
    ViewData["Title"] = "تفاصيل المخزون";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <style>
        /* body {
            background: #0f1724;
            color: #e6eef6;
            font-family: "Segoe UI", Tahoma, sans-serif;
        } */

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .details-card {
            background: rgba(255, 255, 255, 0.02);
            padding: 30px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 15px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .detail-label {
            color: #94a3b8;
            font-weight: bold;
        }

        .detail-value {
            color: #fff;
            font-weight: bold;
        }

        .btn-back {
            display: inline-block;
            margin-top: 20px;
            color: #94a3b8;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>تفاصيل الصنف في المخزن</h1>

        <div class="details-card">
            <div class="detail-row">
                <span class="detail-label">الصنف</span>
                <span class="detail-value">@(Model.Item?.Name ?? "-")</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">المخزن</span>
                <span class="detail-value">@(Model.Store?.Name ?? "-")</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">الكمية الحالية</span>
                <span class="detail-value" style="color: #06b6d4; font-size: 1.2em;">@Model.CurrentQuantity</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">الكمية المحجوزة/المطلوبة</span>
                <span class="detail-value">@Model.OrderedQuantity</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">آخر تحديث</span>
                <span class="detail-value">@Model.LastUpdated.ToString("yyyy/MM/dd HH:mm")</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">الحد الأدنى للصنف</span>
                <span class="detail-value">@(Model.Item?.MinimumQuantity ?? 0)</span>
            </div>
        </div>

        <a href="@Url.Action("List")" class="btn-back">← عودة للقائمة</a>
    </div>
</body>

</html>
