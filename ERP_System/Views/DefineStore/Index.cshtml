@using ERP_System.ViewModels
@model AddStoreVm

@{
    ViewData["Title"] = "إضافة مخزن جديد";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ERP System</title>
    <style>
        :root {
            --bg: #0f1724;
            --panel: rgba(255, 255, 255, 0.06);
            --panel-light: rgba(255, 255, 255, 0.10);
            --border: rgba(255, 255, 255, 0.14);
            --text: #e6eef6;
            --muted: #9ca3af;
            --accent-a: #06b6d4;
            --accent-b: #7c3aed;
            --radius: 16px;
            --danger: #ff6b6b;
        }

        body { background: var(--bg); color: var(--text); font-family: "Segoe UI", Tahoma, sans-serif; }

        .form-wrapper {
            max-width: 1100px;
            margin: 20px auto;
            background: var(--panel);
            border-radius: 20px;
            padding: 36px;
            box-shadow: 0 10px 40px rgba(2,6,23,0.6);
            color: var(--text);
        }

        .section-title { font-size: 22px; color: var(--accent-a); margin: 28px 0 12px; font-weight: 700; border-bottom: 1px solid rgba(255,255,255,0.04); padding-bottom: 10px; }
        label { display:block; font-size:18px; margin-bottom:8px; font-weight:600; color:var(--text); }

        input[type="text"], input[type="email"], input[type="number"], select, textarea, input[type="file"] {
            display:block; width:100%; box-sizing:border-box; background:var(--panel-light); border:1px solid var(--border); border-radius:12px; padding:14px 16px; color:var(--text); font-size:17px; outline:none; transition: border-color .12s, box-shadow .12s, transform .06s;
        }

        input:focus, select:focus, textarea:focus { border-color: var(--accent-a); box-shadow: 0 6px 18px rgba(6,182,212,0.06); transform: translateY(-1px); }

        textarea { min-height:120px; resize: vertical; }

        .grid-2 { display:grid; grid-template-columns:1fr 1fr; gap:22px; align-items:start; }

        .switch-box { background: rgba(255,255,255,0.03); padding:14px; border-radius:12px; display:flex; align-items:center; gap:12px; }
        .switch-item { display:flex; gap:10px; align-items:center; font-size:17px; color:var(--text); }
        .switch-item input[type="checkbox"] { width:22px; height:22px; cursor:pointer; }

        .submit-btn { width:100%; margin-top:26px; padding:18px; font-size:20px; border:none; border-radius:14px; background: linear-gradient(90deg, var(--accent-a), var(--accent-b)); color:#021024; font-weight:800; cursor:pointer; box-shadow:0 12px 30px rgba(124,58,237,0.12); transition: transform .12s, box-shadow .12s; }
        .submit-btn:hover { transform: translateY(-4px); box-shadow: 0 18px 40px rgba(124,58,237,0.16); }

        .phone-row { display:flex; gap:12px; align-items:center; margin-bottom:12px; }
        .phone-row input { flex:1; padding:14px; border-radius:12px; font-size:17px; }

        .btn-icon { width:56px; height:56px; border-radius:12px; border:none; font-size:22px; color:#fff; cursor:pointer; display:inline-flex; align-items:center; justify-content:center; box-shadow:0 8px 20px rgba(2,6,23,0.5); }
        .btn-add { background: linear-gradient(90deg, #10b981, #059669); }
        .btn-remove { background: linear-gradient(90deg, #ef4444, #dc2626); }

        .field-error { color: var(--danger); font-size:14px; margin-top:6px; margin-bottom:8px; display:block; }
        .small-muted { color: var(--muted); font-size:13px; margin-top:6px; display:block; }

        @@media (max-width:900px) { .grid-2 { grid-template-columns:1fr; } .form-wrapper { padding:22px; } h1 { font-size:30px; } }
    </style>
</head>
<body>
    <h1 style="text-align:center; margin-top:18px;">إضافة مخزن جديد</h1>

    <div class="form-wrapper">
        <form asp-action="Index" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="section-title">البيانات الأساسية</div>

            <label asp-for="Name">اسم المخزن</label>
            <input asp-for="Name" placeholder="أدخل اسم المخزن" />
            <span asp-validation-for="Name" class="field-error"></span>

            <div class="grid-2">
                <div>
                    <label asp-for="ManagerName">اسم المدير</label>
                    <input asp-for="ManagerName" placeholder="اسم المسؤول" />
                    <span asp-validation-for="ManagerName" class="field-error"></span>
                </div>
                <div>
                    <label asp-for="Email">البريد الإلكتروني</label>
                    <input asp-for="Email" type="email" placeholder="example@domain.com" />
                    <span asp-validation-for="Email" class="field-error"></span>
                </div>
            </div>

            <label asp-for="Address">العنوان</label>
            <textarea asp-for="Address" placeholder="عنوان المخزن بالتفصيل..."></textarea>
            <span asp-validation-for="Address" class="field-error"></span>

            <div class="section-title">أرقام التواصل</div>

            <div id="phonesContainer">
                @if (Model?.Phones != null && Model.Phones.Any())
                {
                    for (int i = 0; i < Model.Phones.Count; i++)
                    {
                        <div class="phone-row">
                            <input type="text" name="Phones[@i]" value="@Model.Phones[i]" placeholder="رقم الهاتف" />
                            @if (i == 0)
                            {
                                <button type="button" class="btn-icon btn-add add-phone" title="إضافة رقم">+</button>
                            }
                            else
                            {
                                <button type="button" class="btn-icon btn-remove remove-phone" title="حذف">−</button>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="phone-row">
                        <input type="text" name="Phones[0]" placeholder="رقم الهاتف" />
                        <button type="button" class="btn-icon btn-add add-phone" title="إضافة رقم">+</button>
                    </div>
                }
            </div>

            <div class="section-title">الإعدادات والملاحظات</div>

            <div class="grid-2">
                <div>
                    <label asp-for="OpeningHours">أوقات العمل</label>
                    <input asp-for="OpeningHours" placeholder="مثال: 9:00 ص - 5:00 م" />
                    <span asp-validation-for="OpeningHours" class="field-error"></span>
                </div>

                <div>
                    <label>حالة التفعيل</label>
                    <div class="switch-box">
                        <div class="switch-item">
                            <input asp-for="IsActive" type="checkbox" />
                            <span>تفعيل المخزن في النظام</span>
                        </div>
                    </div>
                </div>
            </div>

            <label asp-for="Notes">ملاحظات إضافية</label>
            <textarea asp-for="Notes" placeholder="أي تفاصيل أخرى..."></textarea>
            <span asp-validation-for="Notes" class="field-error"></span>

            <div class="section-title">صورة المخزن</div>
            <label asp-for="Image">اختر صورة</label>
            <input asp-for="Image" type="file" accept="image/*" />
            <span class="small-muted">اختياري — اتركه فارغاً إن أردت الاحتفاظ بالصورة الحالية (لو وُجدت).</span>

            <button class="submit-btn" type="submit">حفظ المخزن</button>
        </form>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" crossorigin="anonymous"></script>

        <script>
            (function () {
                const container = document.getElementById('phonesContainer');
                let index = container.querySelectorAll('.phone-row').length || 1;

                document.addEventListener('click', function (e) {
                    const addBtn = e.target.closest('.add-phone');
                    const removeBtn = e.target.closest('.remove-phone');

                    if (addBtn) {
                        e.preventDefault();
                        const row = document.createElement('div');
                        row.className = 'phone-row';
                        row.innerHTML = `\n                                    <input type="text" name="Phones[${index}]" placeholder="رقم الهاتف" />\n                                    <button type="button" class="btn-icon btn-remove remove-phone" title="حذف">−</button>\n                                `;
                        container.appendChild(row);
                        index++;
                    }

                    if (removeBtn) {
                        e.preventDefault();
                        const p = removeBtn.closest('.phone-row');
                        if (p) p.remove();
                    }
                });
            })();
        </script>
    }
</body>
</html>