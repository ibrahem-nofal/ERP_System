@model ERP_System.ViewModels.AddStoreVm

@{
    ViewData["Title"] = "تعديل مخزن";
}

<!doctype html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ERP System</title>

    <style>
        :root {
            --bg: #0f1724;
            --panel: rgba(255,255,255,0.07);
            --panel-light: rgba(255, 255, 255, 0.1);
            --border: rgba(255,255,255,0.20);
            --text: #e6eef6;
            --muted: #9ca3af;
            --gradient: linear-gradient(90deg,#06b6d4,#7c3aed);
            --radius: 18px;
            --danger: #ff6b6b;
        }

        body {
            background: var(--bg);
            margin: 0;
            padding: 30px;
            font-family: "Segoe UI", Tahoma, sans-serif;
            color: var(--text);
            direction: rtl;
        }

        h1 {
            text-align: center;
            font-size: 36px;
            margin-bottom: 28px;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }

        .form-wrapper {
            width: 100%;
            max-width: 1100px;
            margin: auto;
            background: var(--panel);
            padding: 30px;
            border-radius: var(--radius);
            box-shadow: 0 8px 40px rgba(0,0,0,0.45);
        }

        .section-title {
            font-size: 22px;
            margin: 28px 0 14px;
            color: #06b6d4;
            border-bottom: 2px solid var(--border);
            padding-bottom: 8px;
        }

        label {
            font-size: 18px;
            margin-bottom: 8px;
            display: block;
            font-weight: 600;
        }

        input, select, textarea {
            width: 100%;
            background: var(--panel-light);
            border: 2px solid var(--border);
            border-radius: 14px;
            padding: 12px 14px;
            font-size: 16px;
            color: var(--text);
            margin-bottom: 12px;
            outline: none;
        }

        textarea {
            min-height: 120px;
            resize: vertical;
        }

        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .phone-row {
            display: flex;
            gap: 12px;
            align-items: center;
            margin-bottom: 12px;
        }

            .phone-row input {
                flex: 1;
                padding: 12px;
                border-radius: 12px;
                font-size: 16px;
            }

        .btn-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            border: none;
            font-size: 20px;
            color: #fff;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 6px 18px rgba(0,0,0,0.5);
        }

        .btn-add {
            background: linear-gradient(90deg, #10b981, #059669);
        }

        .btn-remove {
            background: linear-gradient(90deg, #ef4444, #dc2626);
        }

        .switch-box {
            background: rgba(255,255,255,0.03);
            padding: 12px;
            border-radius: 12px;
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .switch-item {
            display: flex;
            gap: 8px;
            align-items: center;
            font-size: 15px;
            color: var(--text);
        }

        .submit-btn {
            width: 100%;
            padding: 16px;
            font-size: 18px;
            margin-top: 18px;
            background: var(--gradient);
            border: none;
            border-radius: 14px;
            font-weight: 800;
            color: #021024;
            cursor: pointer;
            box-shadow: 0 12px 30px rgba(124,58,237,0.12);
            transition: .12s;
        }

            .submit-btn:hover {
                transform: translateY(-3px);
            }

        .field-error {
            color: var(--danger);
            font-size: 13px;
            margin-top: 6px;
            display: block;
        }

        .img-preview {
            width: 160px;
            height: 120px;
            object-fit: cover;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,0.06);
            display: block;
            margin-top: 6px;
        }

        @@media (max-width: 900px) {
            .grid-2

        {
            grid-template-columns: 1fr;
        }

        .form-wrapper {
            padding: 20px;
        }

        h1 {
            font-size: 30px;
        }

        }
    </style>
</head>
<body>

    <h1>تعديل بيانات المخزن</h1>

    <div class="form-wrapper">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @* <input type="hidden" asp-for="Id" /> *@

            <div class="section-title">البيانات الأساسية</div>

            <label asp-for="Name">اسم المخزن</label>
            <input asp-for="Name" placeholder="أدخل اسم المخزن" />
            <span asp-validation-for="Name" class="field-error"></span>

            <div class="grid-2">
                <div>
                    <label asp-for="ManagerName">اسم المدير</label>
                    <input asp-for="ManagerName" placeholder="اسم المسؤول" />
                    <span asp-validation-for="ManagerName" class="field-error"></span>
                </div>

                <div>
                    <label asp-for="Email">البريد الإلكتروني</label>
                    <input asp-for="Email" type="email" placeholder="example@domain.com" />
                    <span asp-validation-for="Email" class="field-error"></span>
                </div>
            </div>

            <label asp-for="Address">العنوان</label>
            <textarea asp-for="Address" placeholder="عنوان المخزن بالتفصيل..."></textarea>
            <span asp-validation-for="Address" class="field-error"></span>

            <div class="section-title">أرقام التواصل</div>

            <div id="phonesContainer">
                @if (Model?.Phones != null && Model.Phones.Any())
                {
                    for (int i = 0; i < Model.Phones.Count; i++)
                    {
                        <div class="phone-row">
                            <input type="text" name="Phones[@i]" value="@Model.Phones[i]" placeholder="رقم الهاتف" />
                            @if (i == 0)
                            {
                                <button type="button" class="btn-icon btn-add add-phone" title="إضافة رقم">+</button>
                            }
                            else
                            {
                                <button type="button" class="btn-icon btn-remove remove-phone" title="حذف">−</button>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="phone-row">
                        <input type="text" name="Phones[0]" placeholder="رقم الهاتف" />
                        <button type="button" class="btn-icon btn-add add-phone" title="إضافة رقم">+</button>
                    </div>
                }
            </div>

            <div class="section-title">الإعدادات والملاحظات</div>

            <div class="grid-2">
                <div>
                    <label asp-for="OpeningHours">أوقات العمل</label>
                    <input asp-for="OpeningHours" placeholder="مثال: 9:00 ص - 5:00 م" />
                    <span asp-validation-for="OpeningHours" class="field-error"></span>
                </div>

                <div>
                    <label>حالة التفعيل</label>
                    <div class="switch-box">
                        <div class="switch-item">
                            <input asp-for="IsActive" type="checkbox" />
                            <span>تفعيل المخزن في النظام</span>
                        </div>
                    </div>
                </div>
            </div>

            <label asp-for="Notes">ملاحظات إضافية</label>
            <textarea asp-for="Notes" placeholder="أي تفاصيل أخرى..."></textarea>
            <span asp-validation-for="Notes" class="field-error"></span>

            <div class="section-title">صورة المخزن</div>

            <label asp-for="Image">اختر صورة جديدة (اختياري)</label>
            <input asp-for="Image" type="file" accept="image/*" id="imageInput" />
            <span class="small-muted" style="color:var(--muted)">اتركها فارغة إن أردت الاحتفاظ بالصورة الحالية (لو وُجدت).</span>

            <img id="imgPreview" class="img-preview" alt="معاينة الصورة" style="display:none;" />

            <button class="submit-btn" type="submit">حفظ التعديلات</button>
        </form>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" crossorigin="anonymous"></script>

        <script>
            (function () {
                // phones dynamic
                const container = document.getElementById('phonesContainer');
                let index = container.querySelectorAll('.phone-row').length || 1;

                document.addEventListener('click', function (e) {
                    const addBtn = e.target.closest('.add-phone');
                    const removeBtn = e.target.closest('.remove-phone');

                    if (addBtn) {
                        e.preventDefault();
                        const row = document.createElement('div');
                        row.className = 'phone-row';
                        row.innerHTML = `
                            <input type="text" name="Phones[${index}]" placeholder="رقم الهاتف" />
                            <button type="button" class="btn-icon btn-remove remove-phone" title="حذف">−</button>
                        `;
                        container.appendChild(row);
                        index++;
                    }

                    if (removeBtn) {
                        e.preventDefault();
                        const p = removeBtn.closest('.phone-row');
                        if (p) p.remove();
                    }
                });

                // image preview
                const imageInput = document.getElementById('imageInput');
                const imgPreview = document.getElementById('imgPreview');

                if (imageInput) {
                    imageInput.addEventListener('change', function (e) {
                        const file = e.target.files && e.target.files[0];
                        if (!file) {
                            imgPreview.style.display = 'none';
                            imgPreview.src = '';
                            return;
                        }
                        const reader = new FileReader();
                        reader.onload = function (ev) {
                            imgPreview.src = ev.target.result;
                            imgPreview.style.display = 'block';
                        };
                        reader.readAsDataURL(file);
                    });
                }
            })();
        </script>
    }
</body>
</html>
