@model IEnumerable<ERP_System.Models.Store>

@{
    ViewData["Title"] = "المخازن";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <style>
        /* body {
            background: #0f1724;
            color: #e6eef6;
            font-family: "Segoe UI", Tahoma, sans-serif;
            margin: 0;
            padding: 20px;
        } */

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 28px;
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.02);
            padding: 12px;
            border-radius: 10px;
        }

        .search-box {
            padding: 10px 14px;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.08);
            background: rgba(255,255,255,0.03);
            color: #fff;
            width: 320px;
        }

        

        .btn-primary {
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            color: #021024;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                opacity: 0.95;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 14px;
            text-align: right;
            border-bottom: 1px solid rgba(255, 255, 255, 0.04);
            vertical-align: middle;
        }

        th {
            background: rgba(255, 255, 255, 0.04);
            color: #06b6d4;
            font-weight: 600;
        }

        tbody tr:hover {
            background: rgba(255,255,255,0.02);
        }

        .btn-action {
            padding: 5px 10px;
            font-size: 14px;
            margin-left: 5px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-edit {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
        }

        .btn-details {
            background: rgba(6, 182, 212, 0.2);
            color: #06b6d4;
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }
        @@media (max-width: 800px) {
            .header-actions

        {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            width: 100%;
        }

        }

        .no-data {
            text-align: center;
            padding: 30px;
            color: #94a3b8;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>المخازن</h1>

        <div class="header-actions">
            <input type="text" id="searchBox" class="search-box" placeholder="بحث عن مخزن...">
            <a href="@Url.Action("Index")" class="btn btn-primary">+ مخزن جديد</a>
        </div>

        <table id="storeTable">
            <thead>
                <tr>
                    <th>الاسم</th>
                    <th>العنوان</th>
                    <th>الهاتف</th>
                    <th>تفاصيل أخرى</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>
                                @(item.Phones != null && item.Phones.Any()
                                                        ? item.Phones.First().Phone
                                                        : "")
                    </td>
                    <td>@item.Notes</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-action btn-details">تفاصيل</a>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-action btn-edit">تعديل</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                              onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                            <button type="submit" class="btn btn-action btn-delete">حذف</button>
                        </form>
                    </td>
                </tr>
                                }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="no-data">
                            لا توجد مخازن حالياً
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        // تأكد من وجود العناصر وانتظار تحميل DOM قبل ربط الأحداث
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchBox');
            const rows = () => document.querySelectorAll('#storeTable tbody tr');

            if (!searchInput) return;

            searchInput.addEventListener('keyup', function () {
                const searchTerm = this.value.trim().toLowerCase();
                rows().forEach(row => {
                    // لو تبي تبحث فقط في عمود الاسم مثلاً استخدم:
                    // const name = row.querySelector('td:first-child')?.textContent.toLowerCase() ?? '';
                    // row.style.display = name.includes(searchTerm) ? '' : 'none';

                    // هنا نبحث في كل نص الصف (آمن وسريع لعدد صفوف معتدل)
                    const text = row.textContent.toLowerCase();
                    row.style.display = (text.includes(searchTerm) ? '' : 'none');
                });
            });
        });
    </script>
</body>
</html>
