@model ERP_System.ViewModels.AddRevenueNameVm

@{
    ViewData["Title"] = "تعديل مسمى إيراد";
}

<!doctype html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <style>
        :root {
            --bg: #0f1724;
            --panel: rgba(255, 255, 255, 0.07);
            --panel-light: rgba(255, 255, 255, 0.10);
            --border: rgba(255, 255, 255, 0.20);
            --text: #e6eef6;
            --muted: #9ca3af;
            --gradient: linear-gradient(90deg, #06b6d4, #7c3aed);
            --radius: 18px;
        }

        body {
            background: var(--bg);
            margin: 0;
            padding: 35px;
            font-family: "Segoe UI", Tahoma, sans-serif;
            color: var(--text);
            direction: rtl;
        }

        h1 {
            text-align: center;
            font-size: 40px;
            margin-bottom: 30px;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
        }

        .form-wrapper {
            width: 100%;
            max-width: 900px;
            margin: auto;
            background: var(--panel);
            padding: 36px;
            border-radius: var(--radius);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.45);
        }

        label {
            font-size: 20px;
            margin-bottom: 8px;
            display: block;
            font-weight: 700;
        }

        input[type="text"],
        textarea {
            width: 100%;
            background: var(--panel-light);
            border: 2px solid var(--border);
            border-radius: 12px;
            padding: 14px;
            font-size: 18px;
            color: var(--text);
            margin-bottom: 20px;
            outline: none;
            box-sizing: border-box;
        }

        textarea {
            min-height: 120px;
            resize: vertical;
        }

        .form-actions {
            margin-top: 22px;
            display: flex;
            gap: 12px;
            align-items: center;
            justify-content: flex-end;
        }

        .btn-save {
            background: var(--gradient);
            color: #021024;
            border: none;
            padding: 14px 26px;
            border-radius: 12px;
            font-size: 18px;
            cursor: pointer;
            font-weight: 800;
        }
    </style>
</head>

<body>

    <h1>تعديل مسمى الإيراد</h1>

    <div class="form-wrapper">

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" name="Id" value="@ViewBag.Id" />

            <label asp-for="Name">اسم المسمى</label>
            <input asp-for="Name" type="text" required />
            <span asp-validation-for="Name"
                style="color: #ef4444; display: block; margin-top: -15px; margin-bottom: 15px;"></span>

            <label asp-for="Detail">الوصف</label>
            <textarea asp-for="Detail"></textarea>
            <span asp-validation-for="Detail"
                style="color: #ef4444; display: block; margin-top: -15px; margin-bottom: 15px;"></span>

            <div class="form-actions">
                <button type="submit" class="btn-save">حفظ التعديلات</button>
            </div>
        </form>

    </div>

</body>

</html>
