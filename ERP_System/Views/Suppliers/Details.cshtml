@model ERP_System.Models.Supplier
@{
    ViewData["Title"] = "تفاصيل المورد";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">📋 تفاصيل المورد</h2>

    <!-- عرض رسائل التنبيه -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@Html.Raw(TempData["Error"])</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@Html.Raw(TempData["Success"])</div>
    }

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">الاسم:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">رقم الهاتف:</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3 fw-bold">البريد الإلكتروني:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-bold">العنوان:</dt>
            <dd class="col-sm-9">@Model.Address</dd>
        </dl>

        <hr />

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">✏️ تعديل</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2">🗑️ حذف</a>
            <a asp-action="Index" class="btn btn-secondary">⬅️ رجوع</a>
        </div>
    </div>
</div>
