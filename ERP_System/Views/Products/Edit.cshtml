@model ERP_System.Models.Product

@{
    ViewData["Title"] = "تعديل المنتج";
}

<div class="container-fluid px-4">

    <!-- ✅ العنوان وزر الرجوع -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1"><i class="bi bi-pencil-square text-primary"></i> تعديل بيانات المنتج</h3>
            <p class="text-muted">قم بتحديث بيانات المنتج المطلوبة</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-right-circle"></i> رجوع لقائمة المنتجات
        </a>
    </div>

    <!-- ✅ النموذج -->
    <div class="card shadow-sm rounded-4 p-4 bg-white">
        <form asp-action="Edit" method="post" class="row g-3">
            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label asp-for="Code" class="form-label fw-semibold">الكود</label>
                <input asp-for="Code" class="form-control" readonly />
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Name" class="form-label fw-semibold">اسم المنتج</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CategoryId" class="form-label fw-semibold">الفئة</label>
                <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
                <span asp-validation-for="CategoryId" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="UnitPrice" class="form-label fw-semibold">سعر الوحدة</label>
                <input asp-for="UnitPrice" type="number" step="0.01" min="0" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ReorderLevel" class="form-label fw-semibold">حد إعادة الطلب</label>
                <input asp-for="ReorderLevel" type="number" min="0" class="form-control" />
                <span asp-validation-for="ReorderLevel" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Status" class="form-label fw-semibold">الحالة</label>
                <input asp-for="Status" class="form-control" readonly />
                <span asp-validation-for="Status" class="text-danger small"></span>
            </div>

            <div class="col-12 text-end mt-4">
                <button type="submit" class="btn btn-primary px-5">
                    <i class="bi bi-check-circle"></i> حفظ التعديلات
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-x-circle"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
