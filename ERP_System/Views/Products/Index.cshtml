@model IEnumerable<ERP_System.Models.Product>

@{
    ViewData["Title"] = "إدارة المنتجات";
    var totalCount = ViewBag.TotalCount ?? 0;
    var totalValue = ViewBag.TotalValue ?? 0m;
    var lowStockCount = Model.Count(p => p.Status == "منخفض");
    var outOfStockCount = Model.Count(p => p.Status == "غير متوفر");
    var availableCount = Model.Count(p => p.Status == "متوفر");
}

<div class="container-fluid px-4">

    <!-- ✅ العنوان و زر الإضافة -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1">إدارة المنتجات</h3>
            <p class="text-muted">إدارة المنتجات وتفاصيلها</p>
        </div>
        <a asp-action="Create" class="btn btn-primary px-4">
            <i class="bi bi-plus-lg me-2"></i> إضافة منتج جديد
        </a>
    </div>

    <!-- ✅ الكروت الإحصائية (بنفس شكل المخازن) -->
    <div class="row g-3 mb-4 text-white">
        <div class="col-md-3">
            <div class="p-3 rounded-4" style="background:#16A34A;">
                <h6>قيمة المخزون</h6>
                <h4>@($"{totalValue:N0} ج.م")</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 rounded-4" style="background:#DC3545;">
                <h6>غير متوفر</h6>
                <h4>@($"{outOfStockCount} منتج")</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 rounded-4" style="background:#FACC15;">
                <h6>مخزون منخفض</h6>
                <h4>@($"{lowStockCount} منتج")</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 rounded-4" style="background:#0D6EFD;">
                <h6>إجمالي المنتجات</h6>
                <h4>@($"{totalCount} منتج")</h4>
            </div>
        </div>
    </div>

    <!-- ✅ الجدول -->
    <div class="bg-white rounded-4 shadow-sm p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-semibold mb-0">قائمة المنتجات</h5>

            <!-- ✅ شريط البحث زي المخازن -->
            <input type="text" id="productSearch" class="form-control" placeholder="ابحث عن منتج..." style="width:250px;">
        </div>

        <table class="table align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>الكود</th>
                    <th>اسم المنتج</th>
                    <th>الفئة</th>
                    <th>السعر</th>
                    <th>الكمية</th>
                    <th>الحالة</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    var qty = p.StockLevels?.Sum(sl => sl.Quantity) ?? 0;
                    string statusClass = p.Status switch
                    {
                        "غير متوفر" => "badge bg-danger",
                        "منخفض" => "badge bg-warning text-dark",
                        _ => "badge bg-success"
                    };

                    <tr>
                        <td>@p.Code</td>
                        <td>@p.Name</td>
                        <td>@p.Category?.Name</td>
                        <td>@($"{p.UnitPrice:N2} ج.م")</td>
                        <td>@qty</td>
                        <td><span class="@statusClass">@p.Status</span></td>
                        <td>
                            <a asp-action="Details" asp-route-id="@p.Id"
                               class="btn btn-sm btn-outline-primary me-1 rounded-3" title="عرض التفاصيل">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@p.Id"
                               class="btn btn-sm btn-outline-secondary me-1" title="تعديل">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@p.Id"
                               class="btn btn-sm btn-outline-danger" title="حذف">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- ✅ كود البحث -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("productSearch");
            const tableRows = document.querySelectorAll("table tbody tr");

            searchInput.addEventListener("keyup", function () {
                const query = this.value.toLowerCase();

                tableRows.forEach(row => {
                    const text = row.innerText.toLowerCase();
                    row.style.display = text.includes(query) ? "" : "none";
                });
            });
        });
    </script>
}
