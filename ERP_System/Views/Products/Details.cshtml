@model ERP_System.Models.Product

@{
    ViewData["Title"] = "تفاصيل المنتج";
}

<div class="container-fluid px-4">

    <!-- ✅ العنوان -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1 text-primary">
                <i class="bi bi-info-circle"></i> تفاصيل المنتج
            </h3>
            <p class="text-muted">عرض كافة بيانات المنتج المحدد</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-right-circle"></i> رجوع لقائمة المنتجات
        </a>
    </div>

    <!-- ✅ تفاصيل المنتج -->
    <div class="card shadow-sm rounded-4 p-4 bg-white mb-4">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold text-secondary">الكود</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">اسم المنتج</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">الفئة</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">الوصف</dt>
            <dd class="col-sm-9">
                @(!string.IsNullOrEmpty(Model.Description) ? Model.Description : "— لا يوجد وصف —")
            </dd>


            <dt class="col-sm-3 fw-semibold text-secondary">سعر الوحدة</dt>
            <dd class="col-sm-9">@($"{Model.UnitPrice:N2} ج.م")</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">حد إعادة الطلب</dt>
            <dd class="col-sm-9">@Model.ReorderLevel</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">الكمية الحالية</dt>
            <dd class="col-sm-9">
                @(Model.StockLevels?.Sum(sl => sl.Quantity) ?? 0)
            </dd>

            <dt class="col-sm-3 fw-semibold text-secondary">الحالة</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Status == "غير متوفر" ? "bg-danger" : Model.Status == "منخفض" ? "bg-warning text-dark" : "bg-success")">
                    @Model.Status
                </span>
            </dd>
        </dl>
    </div>

    <!-- ✅ أزرار التحكم -->
    <div class="d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary px-4 me-2">
            <i class="bi bi-pencil"></i> تعديل
        </a>
        <a asp-action="Index" class="btn btn-outline-primary px-4">
            <i class="bi bi-list-ul"></i> رجوع للقائمة
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
