@model ERP_System.Models.Product
@{
    ViewData["Title"] = "تأكيد الحذف";
}

<div class="container-fluid px-4">

    <!-- ✅ العنوان -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1 text-danger">
                <i class="bi bi-trash3-fill"></i> حذف المنتج
            </h3>
            <p class="text-muted">تأكيد حذف هذا المنتج من النظام</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-right-circle"></i> رجوع لقائمة المنتجات
        </a>
    </div>

    <!-- ✅ كارت التأكيد -->
    <div class="card shadow-sm border-0 rounded-4 p-4 bg-white">
        <div class="alert alert-warning mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            هل أنت متأكد أنك تريد حذف هذا المنتج؟ لا يمكن التراجع عن هذه العملية.
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <p><strong>اسم المنتج:</strong> @Model.Name</p>
                <p><strong>الفئة:</strong> @Model.Category?.Name</p>
            </div>
            <div class="col-md-6">
                <p><strong>السعر:</strong> @($"{Model.UnitPrice:N2} ج.م")</p>
                <p>
                    <strong>الحالة:</strong>
                    <span class="badge @(Model.Status == "متوفر" ? "bg-success-subtle text-success" :
                                                                 Model.Status == "منخفض" ? "bg-warning-subtle text-warning" :
                                                                 "bg-danger-subtle text-danger")">
                        @Model.Status
                    </span>
                </p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="text-end">
                <button type="submit" class="btn btn-danger px-5">
                    <i class="bi bi-trash-fill"></i> تأكيد الحذف
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                    <i class="bi bi-x-circle"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>
