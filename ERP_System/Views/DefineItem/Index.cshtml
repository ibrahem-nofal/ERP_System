@using ERP_System.ViewModels
@model AddItemVm

<!doctype html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>إضافة منتج</title>

    <style>

        /* ------------ Root Theme -------------- */
        :root {
            --bg: #0f1724;
            --panel: rgba(255,255,255,0.07);
            --panel-light: rgba(255, 255, 255, 0.1);
            --border: rgba(255,255,255,0.20);
            --text: #e6eef6;
            --muted: #9ca3af;
            --gradient: linear-gradient(90deg,#06b6d4,#7c3aed);
            --radius: 18px;
        }

        /* body {
            background: var(--bg);
            margin: 0;
            padding: 35px;
            font-family: "Segoe UI", Tahoma, sans-serif;
            color: var(--text);
            direction: rtl;
        } */

        h1 {
            text-align: center;
            font-size: 40px;
            margin-bottom: 35px;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }

        .form-wrapper {
            width: 100%;
            max-width: 1600px; /* أكبر عرض ممكن */
            margin: auto;
            background: var(--panel);
            padding: 40px;
            border-radius: var(--radius);
            box-shadow: 0 8px 40px rgba(0,0,0,0.45);
        }

        .section-title {
            font-size: 28px;
            margin: 40px 0 20px;
            color: #06b6d4;
            border-bottom: 2px solid var(--border);
            padding-bottom: 8px;
        }

        label {
            font-size: 22px;
            margin-bottom: 8px;
            display: block;
            font-weight: 600;
        }

        input, select, textarea {
            width: 100%;
            background: var(--panel-light);
            border: 2px solid var(--border);
            border-radius: var(--radius);
            padding: 18px;
            font-size: 20px;
            color: var(--text);
            margin-bottom: 15px;
            outline: none;
        }

        textarea {
            height: 160px;
            resize: none;
        }

        input[type="file"] {
            padding: 12px;
            font-size: 18px;
        }

        /* Layout Grids */
        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }

        .grid-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }

        /* Switch Panel */
        .switch-box {
            background: rgba(255,255,255,0.05);
            padding: 25px;
            border-radius: var(--radius);
            margin-top: 10px;
        }

        .switch-item {
            font-size: 20px;
            margin-bottom: 12px;
        }

        .submit-btn {
            width: 100%;
            padding: 22px;
            font-size: 26px;
            margin-top: 40px;
            background: var(--gradient);
            border: none;
            border-radius: var(--radius);
            font-weight: bold;
            color: #021024;
            cursor: pointer;
            transition: 0.2s;
        }

            .submit-btn:hover {
                transform: translateY(-3px);
                opacity: 0.95;
            }

        /* Responsive */
        @@media (max-width:1000px) {
            .grid-2, .grid-3

        {
            grid-template-columns: 1fr;
        }

        input, select, textarea {
            font-size: 18px;
        }

        }
    </style>
</head>

<body>

    <h1>إضافة منتج جديد</h1>

    <div class="form-wrapper">

        <form asp-action="Index" method="post" enctype="multipart/form-data">

            <!-- القسم الأول -->
            <div class="section-title">البيانات الأساسية</div>

            <label asp-for="Name">اسم المنتج</label>
            <input asp-for="Name" placeholder="اكتب اسم المنتج هنا">

            <label asp-for="Description">وصف المنتج</label>
            <textarea asp-for="Description" placeholder="أدخل وصفًا دقيقًا للمنتج..."></textarea>

            <div class="grid-2">
                <div>
                    <label asp-for="CompanyMade">الشركة المصنعة</label>
                    <select asp-for="CompanyMade">
                        <option value="">اختر...</option>
                        @foreach (var c in ViewBag.companies)
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    </select>
                </div>

                <div>
                    <label asp-for="DefaultStore">المخزن الافتراضي</label>
                    <select asp-for="DefaultStore">
                        <option value="">اختر...</option>
                        @foreach (var s in ViewBag.stores)
                        {
                            <option value="@s.Id">@s.Name</option>
                        }
                    </select>
                </div>
            </div>

            <!-- القسم الثاني -->
            <div class="section-title">التسعير والمخزون</div>

            <div class="grid-3">
                <div>
                    <label asp-for="BuyPrice">سعر الشراء</label>
                    <input asp-for="BuyPrice" type="number" step="0.01" placeholder="0.00">
                </div>

                <div>
                    <label asp-for="SalePrice">سعر البيع</label>
                    <input asp-for="SalePrice" type="number" step="0.01" placeholder="0.00">
                </div>

                <div>
                    <label asp-for="UnitNumber">الوحدة</label>
                    <select asp-for="UnitNumber">
                        <option value="">اختر...</option>
                        @foreach (var u in ViewBag.units)
                        {
                            <option value="@u.Id">@u.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="grid-2">
                <div>
                    <label asp-for="MinimumQuantity">الحد الأدنى للكمية</label>
                    <input asp-for="MinimumQuantity" type="number">
                </div>

                <div>
                    <label asp-for="MinQuantitySale">الحد الأدنى للبيع</label>
                    <input asp-for="MinQuantitySale" type="number">
                </div>
            </div>

            <!-- القسم الثالث -->
            <div class="section-title">الإعدادات</div>

            <div class="switch-box">
                <div class="switch-item">
                    <input type="checkbox" asp-for="IsActiveBuy"> تفعيل الشراء
                </div>

                <div class="switch-item">
                    <input type="checkbox" asp-for="IsActiveSale"> تفعيل البيع
                </div>

                <div class="switch-item">
                    <input type="checkbox" asp-for="PreventFraction"> منع الكسور
                </div>

                <div class="switch-item">
                    <input type="checkbox" asp-for="PreventDiscount"> منع الخصم
                </div>
            </div>

            <!-- القسم الرابع -->
            <div class="section-title">الصورة</div>

            <label asp-for="Image">صورة المنتج</label>
            <input asp-for="Image" type="file" accept="image/*">

            <button class="submit-btn">حفظ المنتج</button>

        </form>

    </div>

</body>
</html>
