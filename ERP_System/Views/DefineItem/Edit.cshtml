@using ERP_System.ViewModels
@model AddItemVm

<!doctype html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>تعديل منتج</title>

    <style>
        :root {
            --bg: #0f1724;
            --panel: rgba(255,255,255,0.07);
            --panel-light: rgba(255,255,255,0.10);
            --border: rgba(255,255,255,0.20);
            --text: #e6eef6;
            --muted: #9ca3af;
            --gradient: linear-gradient(90deg,#06b6d4,#7c3aed);
            --radius: 18px;
        }

        body {
            background: var(--bg);
            margin: 0;
            padding: 35px;
            font-family: "Segoe UI", Tahoma, sans-serif;
            color: var(--text);
            direction: rtl;
        }

        h1 {
            text-align: center;
            font-size: 40px;
            margin-bottom: 30px;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
        }

        .form-wrapper {
            width: 100%;
            max-width: 1400px;
            margin: auto;
            background: var(--panel);
            padding: 36px;
            border-radius: var(--radius);
            box-shadow: 0 8px 30px rgba(0,0,0,0.45);
        }

        .section-title {
            font-size: 26px;
            margin: 28px 0 16px;
            color: #06b6d4;
            border-bottom: 2px solid rgba(255,255,255,0.04);
            padding-bottom: 8px;
            font-weight: 700;
        }

        label {
            font-size: 20px;
            margin-bottom: 8px;
            display: block;
            font-weight: 700;
        }

        input[type="text"],
        input[type="number"],
        select,
        textarea,
        input[type="file"] {
            width: 100%;
            background: var(--panel-light);
            border: 2px solid var(--border);
            border-radius: 12px;
            padding: 14px;
            font-size: 18px;
            color: var(--text);
            margin-bottom: 12px;
            outline: none;
            box-sizing: border-box;
        }

        textarea { min-height: 140px; resize: vertical; }

        .grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 28px; }
        .grid-3 { display: grid; grid-template-columns: repeat(3,1fr); gap: 28px; }
        @@media (max-width: 1000px) {
            .grid-2, .grid-3 { grid-template-columns: 1fr; }
            label { font-size: 18px; }
            input, select, textarea { font-size: 16px; padding: 12px; }
        }

        .switch-box {
            background: rgba(255,255,255,0.04);
            padding: 18px;
            border-radius: 12px;
            margin-top: 8px;
        }

        .switch-item { font-size: 18px; margin-bottom: 8px; }

        /* dynamic lists (codes/categories) */
        .list-row { display:flex; gap:10px; align-items:center; margin-bottom:10px; }
        .list-row input, .list-row select { flex: 1; }
        .btn-small {
            min-width:44px; height:44px; border-radius:10px; border:0; cursor:pointer; font-weight:700;
        }
        .btn-add { background: #06b6d4; color: #021024; }
        .btn-remove { background: #ef4444; color: #fff; }

        .image-preview {
            width:200px; height:200px; border-radius:12px; overflow:hidden; background:linear-gradient(135deg,#334155,#0f1724);
            display:flex; align-items:center; justify-content:center; color:var(--muted); font-size:14px; border:2px solid rgba(255,255,255,0.03);
        }
        .image-preview img { width:100%; height:100%; object-fit:cover; }

        .form-actions { margin-top:24px; display:flex; gap:16px; align-items:center; justify-content:flex-end; flex-wrap:wrap; }
        .btn-save {
            background: var(--gradient); color: #021024; border: none; padding: 14px 26px; border-radius: 12px; font-size:18px; cursor:pointer; font-weight:800;
        }
        .btn-cancel { background: transparent; border:1px solid rgba(255,255,255,0.06); color:var(--text); padding:12px 18px; border-radius:10px; text-decoration:none; font-weight:700; }

        .help { color:var(--muted); font-size:14px; margin-top:6px; }

    </style>
</head>
<body>
    <h1>تعديل المنتج</h1>

    <div class="form-wrapper">
        <form asp-action="Edit" asp-route-id="@ViewBag.ItemId" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="section-title">البيانات الأساسية</div>

            <label asp-for="Name">اسم المنتج</label>
            <input asp-for="Name" type="text" maxlength="250" />

            <label asp-for="Description">وصف المنتج</label>
            <textarea asp-for="Description" placeholder="أدخل وصفًا واضحًا ومختصرًا"></textarea>

            <div class="grid-2">
                <div>
                    <label>أكواد المنتج</label>
                    <div id="codesContainer">
                        @if (Model?.Codes != null && Model.Codes.Any())
                        {
                            @for (int i = 0; i < Model.Codes.Count; i++)
                            {
                                <div class="list-row">
                                    <input type="text" name="Codes[@i]" value="@Model.Codes[i]" maxlength="200" />
                                    @if (i == 0)
                                    {
                                        <button type="button" class="btn-small btn-add add-code">+</button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn-small btn-remove remove-code">-</button>
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-row">
                                <input type="text" name="Codes[0]" maxlength="200" />
                                <button type="button" class="btn-small btn-add add-code">+</button>
                            </div>
                        }
                    </div>
                    <div class="help">أضف أكثر من كود إن لزم — يستخدم للبحث والربط.</div>
                </div>

                <div>
                    <label>التصنيفات</label>
                    <div id="categoriesContainer">
                        @if (Model?.CategoryIds != null && Model.CategoryIds.Any())
                        {
                            @for (int i = 0; i < Model.CategoryIds.Count; i++)
                            {
                                <div class="list-row">
                                    <select name="CategoryIds[@i]">
                                        @foreach (var c in ViewBag.categories)
                                        {
                                            <option value="@c.Id" @@(c.Id == Model.CategoryIds[i] ? "selected" : "")>@c.Name</option>
                                        }
                                    </select>
                                    @if (i == 0)
                                    {
                                        <button type="button" class="btn-small btn-add add-category">+</button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn-small btn-remove remove-category">-</button>
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-row">
                                <select name="CategoryIds[0]">
                                    @foreach (var c in ViewBag.categories)
                                    {
                                        <option value="@c.Id">@c.Name</option>
                                    }
                                </select>
                                <button type="button" class="btn-small btn-add add-category">+</button>
                            </div>
                        }
                    </div>
                    <div class="help">ربط المنتج بتصنيفات (يمكن اختيار أكثر من تصنيف).</div>
                </div>
            </div>

            <div class="section-title">التسعير والمخزون</div>

            <div class="grid-3">
                <div>
                    <label asp-for="BuyPrice">سعر الشراء</label>
                    <input asp-for="BuyPrice" type="number" step="0.01" />
                </div>

                <div>
                    <label asp-for="SalePrice">سعر البيع</label>
                    <input asp-for="SalePrice" type="number" step="0.01" />
                </div>

                <div>
                    <label asp-for="UnitNumber">الوحدة</label>
                    <select asp-for="UnitNumber">
                        <option value="">-- اختر --</option>
                        @foreach (var u in ViewBag.units)
                        {
                            <option value="@u.Id" @@(Model?.UnitNumber == u.Id ? "selected" : "")>@u.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="grid-2">
                <div>
                    <label asp-for="MinimumQuantity">الحد الأدنى للكمية</label>
                    <input asp-for="MinimumQuantity" type="number" />
                </div>

                <div>
                    <label asp-for="MinQuantitySale">الحد الأدنى للبيع</label>
                    <input asp-for="MinQuantitySale" type="number" />
                </div>
            </div>

            <div class="section-title">الإعدادات</div>

            <div class="switch-box">
                <div class="switch-item"><input type="checkbox" asp-for="IsActiveBuy" /> تفعيل الشراء</div>
                <div class="switch-item"><input type="checkbox" asp-for="IsActiveSale" /> تفعيل البيع</div>
                <div class="switch-item"><input type="checkbox" asp-for="PreventFraction" /> منع الكسور</div>
                <div class="switch-item"><input type="checkbox" asp-for="PreventDiscount" /> منع الخصم</div>
            </div>

            <div class="section-title">الصورة</div>

            <div style="display:flex; gap:24px; align-items:flex-start; flex-wrap:wrap;">
                <div style="flex:1; min-width:260px;">
                    <label asp-for="Image">صورة المنتج (اختياري)</label>
                    <input asp-for="Image" type="file" accept="image/*" id="imageInput" />
                    <div class="help">اترك الحقل فارغاً للاحتفاظ بالصورة الحالية.</div>
                </div>

                <div style="width:220px;">
                    <label>معاينة الصورة الحالية</label>
                    <div class="image-preview" id="imagePreview">
                        @if (ViewBag.ImageBase64 != null)
                        {
                            <img src="data:image/jpeg;base64,@ViewBag.ImageBase64" alt="preview" />
                        }
                        else
                        {
                            <div class="help">لا توجد صورة حالية</div>
                        }
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a href="@Url.Action("List")" class="btn-cancel">إلغاء</a>
                <button type="submit" class="btn-save">حفظ التعديلات</button>
            </div>
        </form>
    </div>

    <script>
        // الفهارس الأولية
        let codeIndex = @(Model?.Codes?.Count ?? 1);
        let categoryIndex = @(Model?.CategoryIds?.Count ?? 1);

        function getCategoryOptionsHtml() {
            const firstSelect = document.querySelector("#categoriesContainer select");
            if (!firstSelect) return "";
            return Array.from(firstSelect.options)
                .map(o => `<option value="${o.value}">${o.text}</option>`)
                .join("");
        }

        document.addEventListener("click", function (e) {
            if (e.target.classList.contains("add-code")) {
                const container = document.getElementById("codesContainer");
                const row = document.createElement("div");
                row.className = "list-row";
                row.innerHTML = `
                    <input type="text" name="Codes[${codeIndex}]" maxlength="200" />
                    <button type="button" class="btn-small btn-remove remove-code">-</button>
                `;
                container.appendChild(row);
                codeIndex++;
            }

            if (e.target.classList.contains("add-category")) {
                const container = document.getElementById("categoriesContainer");
                const row = document.createElement("div");
                row.className = "list-row";
                row.innerHTML = `
                    <select name="CategoryIds[${categoryIndex}]">
                        ${getCategoryOptionsHtml()}
                    </select>
                    <button type="button" class="btn-small btn-remove remove-category">-</button>
                `;
                container.appendChild(row);
                categoryIndex++;
            }

            if (e.target.classList.contains("remove-code") || e.target.classList.contains("remove-category")) {
                const row = e.target.closest(".list-row");
                if (row) row.remove();
            }
        });

        // معاينة الصورة قبل الرفع
        (function () {
            const input = document.getElementById('imageInput');
            const preview = document.getElementById('imagePreview');
            if (!input) return;
            input.addEventListener('change', function (ev) {
                const file = ev.target.files[0];
                if (!file) return;
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.innerHTML = '<img src="' + e.target.result + '" alt="preview" />';
                };
                reader.readAsDataURL(file);
            });
        })();
    </script>
</body>
</html>
