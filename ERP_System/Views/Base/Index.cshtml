@{
    ViewData["Title"] = "الرئيسية";
    Layout = "_Layout";
}

<style>
    .base-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
        padding: 20px 0;
    }

    /* Animation Keyframes */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .base-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 20px;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        gap: 15px;
        backdrop-filter: blur(10px);
        height: 100%;

        /* Initial state for animation */
        opacity: 0;
        animation: fadeInUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }

    /* Staggered Animation Delays */
    .base-card:nth-child(1) {
        animation-delay: 0.1s;
    }

    .base-card:nth-child(2) {
        animation-delay: 0.2s;
    }

    .base-card:nth-child(3) {
        animation-delay: 0.3s;
    }

    .base-card:nth-child(4) {
        animation-delay: 0.4s;
    }

    .base-card:nth-child(5) {
        animation-delay: 0.5s;
    }

    .base-card:nth-child(6) {
        animation-delay: 0.6s;
    }

    .base-card:nth-child(7) {
        animation-delay: 0.7s;
    }

    .base-card:nth-child(8) {
        animation-delay: 0.8s;
    }

    .base-card:nth-child(9) {
        animation-delay: 0.9s;
    }

    .base-card:nth-child(10) {
        animation-delay: 1.0s;
    }

    .base-card:nth-child(11) {
        animation-delay: 1.1s;
    }

    .base-card:nth-child(12) {
        animation-delay: 1.2s;
    }

    .base-card:hover {
        transform: translateY(-10px) scale(1.02);
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(6, 182, 212, 0.5);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    }

    .card-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(124, 58, 237, 0.2));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #06b6d4;
        margin-bottom: 10px;
        transition: transform 0.3s ease;
    }

    .base-card:hover .card-icon {
        transform: rotate(10deg) scale(1.1);
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #fff;
        margin: 0;
    }

    .card-desc {
        color: #94a3b8;
        font-size: 0.9rem;
        line-height: 1.5;
        flex-grow: 1;
    }

    .card-actions {
        margin-top: auto;
    }

    .btn-action {
        display: block;
        width: 100%;
        padding: 10px;
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        text-align: center;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-action:hover {
        background: linear-gradient(90deg, #06b6d4, #7c3aed);
        color: #fff;
        letter-spacing: 1px;
    }
</style>

<div class="container">
    <div class="page-header">
        <h1>الرئيسية</h1>
        <p class="text-muted">نظرة عامة على وحدات النظام</p>
    </div>

    <div class="base-grid">
        <!-- Categories -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-tags"></i>
            </div>
            <h3 class="card-title">التصنيفات</h3>
            <p class="card-desc">إدارة تصنيفات المنتجات والمجموعات الرئيسية والفرعية.</p>
            <div class="card-actions">
                <a asp-controller="DefineCategory" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Employees -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-people"></i>
            </div>
            <h3 class="card-title">الموظفين</h3>
            <p class="card-desc">إدارة بيانات الموظفين والصلاحيات والمسميات الوظيفية.</p>
            <div class="card-actions">
                <a asp-controller="DefineEmployee" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Units -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-rulers"></i>
            </div>
            <h3 class="card-title">الوحدات</h3>
            <p class="card-desc">تعريف وحدات القياس للمنتجات (قطعة، كرتونة، إلخ).</p>
            <div class="card-actions">
                <a asp-controller="DefineUnit" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Companies -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-building"></i>
            </div>
            <h3 class="card-title">شركات المنشأ</h3>
            <p class="card-desc">إدارة بيانات الشركات المصنعة والعلامات التجارية.</p>
            <div class="card-actions">
                <a asp-controller="DefineCompany" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Stores -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-shop"></i>
            </div>
            <h3 class="card-title">المخازن</h3>
            <p class="card-desc">إدارة المستودعات والمخازن وتتبع المخزون.</p>
            <div class="card-actions">
                <a asp-controller="DefineStore" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Suppliers -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-truck"></i>
            </div>
            <h3 class="card-title">الموردين</h3>
            <p class="card-desc">قاعدة بيانات الموردين وإدارة حساباتهم.</p>
            <div class="card-actions">
                <a asp-controller="DefineSupplier" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Items -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <h3 class="card-title">المنتجات </h3>
            <p class="card-desc">إدارة المنتجات والأسعار والباركود.</p>
            <div class="card-actions">
                <a asp-controller="DefineItem" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Customers -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-person-badge"></i>
            </div>
            <h3 class="card-title">العملاء</h3>
            <p class="card-desc">إدارة بيانات العملاء وحساباتهم.</p>
            <div class="card-actions">
                <a asp-controller="DefineCustomer" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Expense Names -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-cash-coin"></i>
            </div>
            <h3 class="card-title">اسماء المصروفات</h3>
            <p class="card-desc">تعريف بنود المصروفات المختلفة للنظام.</p>
            <div class="card-actions">
                <a asp-controller="DefineExpenseName" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>

        <!-- Revenue Names -->
        <div class="base-card">
            <div class="card-icon">
                <i class="bi bi-graph-up-arrow"></i>
            </div>
            <h3 class="card-title">اسماء الايرادات</h3>
            <p class="card-desc">تعريف مصادر الإيرادات المختلفة للنظام.</p>
            <div class="card-actions">
                <a asp-controller="DefineRevenueName" asp-action="List" class="btn-action">عرض</a>
            </div>
        </div>
    </div>
</div>

