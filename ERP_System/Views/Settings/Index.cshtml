@{
    ViewData["Title"] = "لوحة تحكم الإعدادات";
}

<div class="container-fluid p-4">
    <h2 class="mb-4 text-white">لوحة تحكم الإعدادات</h2>

    <div class="row g-4">
        <!-- Company Profile -->
        <div class="col-md-4">
            <div class="card h-100 bg-dark text-white border-secondary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-building fs-1 mb-3 text-primary"></i>
                    <h5 class="card-title">ملف الشركة</h5>
                    <p class="card-text text-muted">إدارة تفاصيل الشركة، الشعار، ومعلومات الاتصال.</p>
                    <a asp-action="CompanyProfile" class="btn btn-outline-primary stretched-link">إدارة</a>
                </div>
            </div>
        </div>


        <!-- Financial -->
        <div class="col-md-4">
            <div class="card h-100 bg-dark text-white border-secondary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin fs-1 mb-3 text-warning"></i>
                    <h5 class="card-title">الإعدادات المالية</h5>
                    <p class="card-text text-muted">العملة، نسب الضرائب، وإعدادات السنة المالية.</p>
                    <a asp-action="Financial" class="btn btn-outline-warning stretched-link">إدارة</a>
                </div>
            </div>
        </div>

        <!-- Inventory -->
        <div class="col-md-4">
            <div class="card h-100 bg-dark text-white border-secondary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam fs-1 mb-3 text-info"></i>
                    <h5 class="card-title">المخزون</h5>
                    <p class="card-text text-muted">الوحدات، الفئات، وتقييم المخزون.</p>
                    <a asp-action="Inventory" class="btn btn-outline-info stretched-link">إدارة</a>
                </div>
            </div>
        </div>

        <!-- Logout -->
        <div class="col-md-4">
            <div class="card h-100 bg-dark text-white border-secondary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-box-arrow-right fs-1 mb-3 text-danger"></i>
                    <h5 class="card-title">تسجيل الخروج</h5>
                    <p class="card-text text-muted">الخروج من النظام والعودة لصفحة الدخول.</p>
                    <a asp-controller="Account" asp-action="Logout"
                        class="btn btn-outline-danger stretched-link">خروج</a>
                </div>
            </div>
        </div>


    </div>
</div>
