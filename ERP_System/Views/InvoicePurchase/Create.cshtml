@model ERP_System.Models.InvoicePurchaseHeader

@{
    ViewData["Title"] = "إنشاء فاتورة شراء";
    var items = ViewBag.Items as IEnumerable<dynamic>;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <style>
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            margin-bottom: 30px;
            text-align: center;
        }

        h1 {
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
        }

        .card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
            backdrop-filter: blur(10px);
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            color: #e2e8f0;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #fff;
            font-size: 1rem;
        }

        .form-control:focus {
            outline: none;
            border-color: #06b6d4;
            background: rgba(255, 255, 255, 0.1);
        }

        select.form-control {
            background-color: rgba(0, 0, 0, 0.3);
            color: white;
        }

        select.form-control option {
            background-color: #1e293b;
            color: white;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th,
        td {
            padding: 12px;
            text-align: right;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        th {
            color: #94a3b8;
            font-weight: 500;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary {
            background: linear-gradient(135deg, #06b6d4, #7c3aed);
            color: white;
        }

        .btn-success {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        .btn-danger {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.3);
            padding: 5px 10px;
        }

        .total-box {
            background: rgba(255, 255, 255, 0.03);
            padding: 20px;
            border-radius: 12px;
            margin-top: 20px;
            text-align: left;
        }

        .grand-total {
            font-size: 1.5rem;
            color: #06b6d4;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="page-header">
            <h1>فاتورة شراء جديدة</h1>
        </div>

        <form asp-action="Create" id="invoiceForm">
            <div class="card">
                <h3 style="color: #e2e8f0; margin-bottom: 20px;">بيانات الفاتورة</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-grid">
                    <div class="form-group">
                        <label asp-for="SupplierId">المورد</label>
                        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="StoreId">المخزن</label>
                        <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateCreated">التاريخ</label>
                        <input asp-for="DateCreated" class="form-control" type="datetime-local"
                            value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PayStatus">حالة الدفع</label>
                        <select asp-for="PayStatus" class="form-control">
                            <option value="Unpaid">غير مدفوع</option>
                            <option value="Paid">مدفوع</option>
                            <option value="Partial">جزئي</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderStatus">حالة الطلب</label>
                        <select asp-for="OrderStatus" class="form-control">
                            <option value="wait">انتظار</option>
                            <option value="recieved">تم الاستلام</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                    <h3 style="color: #e2e8f0; margin: 0;">الأصناف</h3>
                    <button type="button" class="btn btn-success" onclick="addItem()">+ إضافة صنف</button>
                </div>

                <table id="itemsTable">
                    <thead>
                        <tr>
                            <th width="40%">الصنف</th>
                            <th width="15%">الكمية</th>
                            <th width="20%">السعر</th>
                            <th width="20%">الإجمالي</th>
                            <th width="5%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Rows will be added here -->
                    </tbody>
                </table>

                <div class="total-box">
                    <span style="color: #94a3b8; margin-left: 10px;">الإجمالي الكلي:</span>
                    <span id="grandTotal" class="grand-total">0.00</span>
                </div>
            </div>

            <div class="card">
                <div class="form-group">
                    <label asp-for="Remarks">ملاحظات</label>
                    <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 10px;">حفظ
                    الفاتورة</button>
            </div>
        </form>
    </div>

    <!-- Hidden template for items data -->
    <select id="itemSelectTemplate" style="display:none;">
        <option value="">اختر صنف...</option>
        @foreach (var item in items)
        {
            <option value="@item.Id" data-price="@item.BuyPrice">@item.Name</option>
        }
    </select>

    <script>
        let itemIndex = 0;

        function addItem() {
            const tbody = document.querySelector('#itemsTable tbody');
            const tr = document.createElement('tr');

            const itemOptions = document.getElementById('itemSelectTemplate').innerHTML;

            tr.innerHTML = `
                <td>
                    <select name="details[${itemIndex}].ItemId" class="form-control item-select" onchange="updatePrice(this)" required>
                        ${itemOptions}
                    </select>
                </td>
                <td>
                    <input type="number" name="details[${itemIndex}].Quantity" class="form-control qty-input" value="1" min="1" onchange="calculateRow(this)" required />
                </td>
                <td>
                    <input type="number" name="details[${itemIndex}].UnitPrice" class="form-control price-input" step="0.01" onchange="calculateRow(this)" required />
                </td>
                <td>
                    <span class="row-total">0.00</span>
                </td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="removeRow(this)">x</button>
                </td>
            `;

            tbody.appendChild(tr);
            itemIndex++;
        }

        function removeRow(btn) {
            btn.closest('tr').remove();
            calculateGrandTotal();
        }

        function updatePrice(select) {
            const option = select.options[select.selectedIndex];
            const price = option.getAttribute('data-price') || 0;
            const row = select.closest('tr');
            row.querySelector('.price-input').value = price;
            calculateRow(select);
        }

        function calculateRow(element) {
            const row = element.closest('tr');
            const qty = parseFloat(row.querySelector('.qty-input').value) || 0;
            const price = parseFloat(row.querySelector('.price-input').value) || 0;
            const total = qty * price;

            row.querySelector('.row-total').textContent = total.toFixed(2);
            calculateGrandTotal();
        }

        function calculateGrandTotal() {
            let total = 0;
            document.querySelectorAll('.row-total').forEach(span => {
                total += parseFloat(span.textContent) || 0;
            });
            document.getElementById('grandTotal').textContent = total.toFixed(2);
        }

        // Add initial row
        addItem();
    </script>
</body>

</html>
