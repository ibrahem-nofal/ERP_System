@model ERP_System.Models.Warehouse
@{
    ViewData["Title"] = "تأكيد الحذف";
}

<div class="container-fluid px-4">

    <!-- ✅ العنوان -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1 text-danger">
                <i class="bi bi-trash3-fill"></i> حذف المخزن
            </h3>
            <p class="text-muted">تأكيد حذف هذا المخزن من النظام</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-right-circle"></i> رجوع لقائمة المخازن
        </a>
    </div>

    <!-- ✅ كارت التأكيد -->
    <div class="card shadow-sm border-0 rounded-4 p-4 bg-white">
        <div class="alert alert-warning mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            هل أنت متأكد أنك تريد حذف هذا المخزن؟ لا يمكن التراجع عن هذه العملية.
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <p><strong>اسم المخزن:</strong> @Model.Name</p>
                <p><strong>الموقع:</strong> @Model.Location</p>
            </div>
            <div class="col-md-6">
                <p>
                    <strong>الحالة:</strong>
                    <span class="badge @(Model.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-muted")">
                        @(Model.IsActive ? "نشط" : "غير نشط")
                    </span>
                </p>
                <p><strong>السعة:</strong> @Model.Capacity</p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="text-end">
                <button type="submit" class="btn btn-danger px-5">
                    <i class="bi bi-trash-fill"></i> تأكيد الحذف
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                    <i class="bi bi-x-circle"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>
