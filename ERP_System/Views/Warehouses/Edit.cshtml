@model ERP_System.Models.Warehouse
@{
    ViewData["Title"] = "تعديل بيانات المخزن";
}

<div class="container-fluid px-4">

    <!-- ✅ العنوان وزر الرجوع -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1"><i class="bi bi-pencil-square text-warning"></i> تعديل بيانات المخزن</h3>
            <p class="text-muted">يمكنك تعديل بيانات المخزن ثم حفظ التغييرات</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-right-circle"></i> رجوع لقائمة المخازن
        </a>
    </div>

    <!-- ✅ رسائل النجاح أو الخطأ -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- ✅ نموذج التعديل -->
    <div class="card shadow-sm rounded-4 p-4 bg-white">
        <form asp-action="Edit" method="post" class="row g-3">

            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label asp-for="Name" class="form-label fw-semibold">اسم المخزن</label>
                <input asp-for="Name" class="form-control" placeholder="اسم المخزن" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Location" class="form-label fw-semibold">الموقع</label>
                <input asp-for="Location" class="form-control" placeholder="الموقع" />
                <span asp-validation-for="Location" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Capacity" class="form-label fw-semibold">السعة التخزينية</label>
                <input asp-for="Capacity" class="form-control" type="number" min="0" placeholder="السعة القصوى" />
                <span asp-validation-for="Capacity" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="IsActive" class="form-label fw-semibold">الحالة</label>
                <select asp-for="IsActive" class="form-select">
                    <option value="true" selected="@Model.IsActive">نشط</option>
                    <option value="false" selected="@(!Model.IsActive)">غير نشط</option>
                </select>
            </div>

            <div class="col-12 text-end mt-4">
                <button type="submit" class="btn btn-warning px-5 text-white">
                    <i class="bi bi-save2"></i> حفظ التعديلات
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-x-circle"></i> إلغاء
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
