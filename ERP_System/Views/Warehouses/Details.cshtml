@model ERP_System.Models.Warehouse

@{
    ViewData["Title"] = "تفاصيل المخزن";
    var totalQty = Model.StockLevels?.Sum(sl => sl.Quantity) ?? 0;
    var totalValue = Model.StockLevels?.Sum(sl => sl.Product.UnitPrice * sl.Quantity) ?? 0;
    var ratio = Model.Capacity > 0 ? (double)totalQty / Model.Capacity * 100 : 0;
}

<div class="container-fluid px-4">

    <!-- ✅ العنوان -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1">
                <i class="bi bi-box-seam text-primary"></i>
                تفاصيل المخزن
            </h3>
            <p class="text-muted">بيانات المخزن والمنتجات المخزّنة بداخله</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-right-circle"></i> رجوع لقائمة المخازن
        </a>
    </div>

    <!-- ✅ كارت بيانات المخزن -->
    <div class="card shadow-sm rounded-4 mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="fw-bold mb-3">@Model.Name</h5>
                    <p class="mb-1"><i class="bi bi-geo-alt text-primary"></i> @Model.Location</p>
                    <p class="mb-1">
                        <strong>الحالة:</strong>
                        <span class="badge @(Model.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-muted")">
                            @(Model.IsActive ? "نشط" : "غير نشط")
                        </span>
                    </p>
                    <p class="mb-0"><strong>السعة:</strong> @Model.Capacity</p>
                </div>
                <div class="col-md-6 text-center">
                    <h6>نسبة الإشغال</h6>
                    <div class="progress" style="height:10px;">
                        <div class="progress-bar" role="progressbar"
                             style="width:@($"{ratio:F0}%"); background:@(ratio > 80 ? "#dc3545" : ratio > 60 ? "#fd7e14" : "#0d6efd");">
                        </div>
                    </div>
                    <div class="mt-1 small text-muted">
                        @($"{totalQty} / {Model.Capacity}") (@($"{ratio:F1}%"))
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ✅ كروت الإحصائيات -->
    <div class="row g-3 mb-4 text-white">
        <div class="col-md-4">
            <div class="p-3 rounded-4" style="background:#0D6EFD;">
                <h6>عدد الأصناف</h6>
                <h4>@(Model.StockLevels?.Count() ?? 0)</h4>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 rounded-4" style="background:#16A34A;">
                <h6>إجمالي الكمية</h6>
                <h4>@totalQty</h4>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 rounded-4" style="background:#FF7A00;">
                <h6>القيمة الإجمالية</h6>
                <h4>@($"{totalValue:N0} ريال")</h4>
            </div>
        </div>
    </div>

    <!-- ✅ جدول المنتجات -->
    <div class="bg-white rounded-4 shadow-sm p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-semibold mb-0">المنتجات داخل المخزن</h5>
            <span class="text-muted">(@(Model.StockLevels?.Count() ?? 0) منتج)</span>
        </div>

        @if (Model.StockLevels == null || !Model.StockLevels.Any())
        {
            <div class="alert alert-light text-center m-0">
                <i class="bi bi-info-circle text-primary"></i> لا توجد منتجات حالياً في هذا المخزن.
            </div>
        }
        else
        {
            <table class="table align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>اسم المنتج</th>
                        <th>التصنيف</th>
                        <th>الكمية</th>
                        <th>سعر الوحدة</th>
                        <th>القيمة الكلية</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sl in Model.StockLevels)
                    {
                        var product = sl.Product;
                        var value = sl.Product.UnitPrice * sl.Quantity;

                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Category?.Name</td>
                            <td>@sl.Quantity</td>
                            <td>@($"{product.UnitPrice:N0} ريال")</td>
                            <td>@($"{value:N0} ريال")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
