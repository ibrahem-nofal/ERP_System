@model IEnumerable<ERP_System.Models.Warehouse>
@{
    ViewData["Title"] = "إدارة المخازن";
}

<div class="container-fluid px-4">

    <!-- ✅ العنوان و زر الإضافة -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1">إدارة المخازن</h3>
            <p class="text-muted">إدارة المخازن والسعات التخزينية</p>
        </div>
        <a asp-action="Create" class="btn btn-primary px-4">
            <i class="bi bi-plus-lg me-2"></i> إضافة مخزن جديد
        </a>
    </div>

    <!-- ✅ الكروت الإحصائية -->
    <div class="row g-3 mb-4 text-white">
        <div class="col-md-3">
            <div class="p-3 rounded-4" style="background:#FF7A00;">
                <h6>القيمة الإجمالية</h6>
                <h4>@($"{Model.Sum(w => w.StockLevels?.Sum(sl => sl.Product.UnitPrice * sl.Quantity) ?? 0):N0} ريال")</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 rounded-4" style="background:#8E44AD;">
                <h6>معدل الاستخدام</h6>
                @{
                    var used = Model.Sum(w => w.StockLevels?.Sum(sl => sl.Quantity) ?? 0);
                    var cap = Model.Sum(w => w.Capacity);
                    var overallRatio = cap > 0 ? (double)used / cap * 100 : 0;
                }
                <h4>@($"{overallRatio:F1}%")</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 rounded-4" style="background:#16A34A;">
                <h6>إجمالي الأصناف</h6>
                <h4>@($"{ViewBag.TotalProducts} صنف")</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="p-3 rounded-4" style="background:#0D6EFD;">
                <h6>إجمالي المخازن</h6>
                <h4>@Model.Count() مخزن</h4>
            </div>
        </div>
    </div>

    <!-- ✅ الجدول -->
    <div class="bg-white rounded-4 shadow-sm p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-semibold mb-0">قائمة المخازن</h5>
            <input type="text" id="warehouseSearch" class="form-control" placeholder="ابحث عن مخزن..." style="width:250px;">
        </div>

        <table class="table align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>الكود</th>
                    <th>اسم المخزن</th>
                    <th>الموقع</th>
                    <th>الحالة</th>
                    <th>نسبة الإشغال</th>
                    <th>عدد الأصناف</th>
                    <th>القيمة</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var w in Model)
                {
                    var totalQty = w.StockLevels?.Sum(sl => sl.Quantity) ?? 0;
                    var ratio = w.Capacity > 0 ? (double)totalQty / w.Capacity * 100 : 0;
                    var totalValue = w.StockLevels?.Sum(sl => sl.Product.UnitPrice * sl.Quantity) ?? 0;

                    <tr>
                        <td>@($"WH-{w.Id:D3}")</td>
                        <td>@w.Name</td>
                        <td><i class="bi bi-geo-alt text-primary"></i> @w.Location</td>
                        <td>
                            <span class="badge @(w.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-muted")">
                                @(w.IsActive ? "نشط" : "غير نشط")
                            </span>
                        </td>
                        <td style="width:180px;">
                            <div class="small text-muted">@($"{totalQty} / {w.Capacity}")</div>
                            <div class="progress" style="height:6px;">
                                <div class="progress-bar" role="progressbar" style="width:@($"{ratio:F0}%"); background:#0A58CA"></div>
                            </div>
                            <small class="text-muted">@($"{ratio:F0}%")</small>
                        </td>
                        <td>@(w.StockLevels?.Count() ?? 0)</td>
                        <td>@($"{totalValue:N0} ريال")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@w.Id"
                               class="btn btn-sm btn-outline-primary me-1"
                               title="عرض التفاصيل">
                                <i class="bi bi-eye"></i>
                            </a>

                            <a asp-action="Edit" asp-route-id="@w.Id"
                               class="btn btn-sm btn-outline-secondary me-1"
                               title="تعديل">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <a asp-action="Delete" asp-route-id="@w.Id"
                               class="btn btn-sm btn-outline-danger"
                               title="حذف">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- ✅ كود البحث -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("warehouseSearch");
            const tableRows = document.querySelectorAll("table tbody tr");

            searchInput.addEventListener("keyup", function () {
                const query = this.value.toLowerCase();

                tableRows.forEach(row => {
                    const text = row.innerText.toLowerCase();
                    row.style.display = text.includes(query) ? "" : "none";
                });
            });
        });
    </script>
}
