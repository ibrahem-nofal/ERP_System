@model ERP_System.Models.ChartOfAccount

@{
    ViewData["Title"] = "إضافة حساب";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}


<!doctype html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <style>
        /* ------------ Root Theme (copied from Add Item) -------------- */
        :root {
            --bg: #0f1724;
            --panel: rgba(255,255,255,0.07);
            --panel-light: rgba(255, 255, 255, 0.1);
            --border: rgba(255,255,255,0.20);
            --text: #e6eef6;
            --muted: #9ca3af;
            --gradient: linear-gradient(90deg,#06b6d4,#7c3aed);
            --radius: 18px;
        }

        html, body {
            height: 100%;
        }

        body {
            background: var(--bg);
            margin: 0;
            padding: 35px;
            font-family: "Segoe UI", Tahoma, sans-serif;
            color: var(--text);
            direction: rtl;
        }

        h1 {
            text-align: center;
            font-size: 40px;
            margin-bottom: 35px;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }

        .form-wrapper {
            width: 100%;
            max-width: 1000px;
            margin: auto;
            background: var(--panel);
            padding: 40px;
            border-radius: var(--radius);
            box-shadow: 0 8px 40px rgba(0,0,0,0.45);
        }

        .section-title {
            font-size: 28px;
            margin: 40px 0 20px;
            color: #06b6d4;
            border-bottom: 2px solid var(--border);
            padding-bottom: 8px;
        }

        label {
            font-size: 22px;
            margin-bottom: 8px;
            display: block;
            font-weight: 600;
        }

        input, select, textarea {
            width: 100%;
            background: var(--panel-light);
            border: 2px solid var(--border);
            border-radius: var(--radius);
            padding: 18px;
            font-size: 20px;
            color: var(--text);
            margin-bottom: 15px;
            outline: none;
            box-sizing: border-box;
        }

        textarea {
            height: 160px;
            resize: none;
        }

        input[type="file"] {
            padding: 12px;
            font-size: 18px;
        }

        /* Layout Grids */
        .grid-2 {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }

        .grid-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }

        /* Switch Panel */
        .switch-box {
            background: rgba(255,255,255,0.05);
            padding: 25px;
            border-radius: var(--radius);
            margin-top: 10px;
        }

        .switch-item {
            font-size: 20px;
            margin-bottom: 12px;
        }

        .submit-btn {
            width: 100%;
            padding: 22px;
            font-size: 26px;
            margin-top: 40px;
            background: var(--gradient);
            border: none;
            border-radius: var(--radius);
            font-weight: bold;
            color: #021024;
            cursor: pointer;
            transition: 0.2s;
        }

            .submit-btn:hover {
                transform: translateY(-3px);
                opacity: 0.95;
            }

        /* Responsive */
        @@media (max-width:1000px) {
            .grid-2, .grid-3

        {
            grid-template-columns: 1fr;
        }

        input, select, textarea {
            font-size: 18px;
        }

        }

        .help {
            color: var(--muted);
            font-size: 14px;
            margin-top: 6px;
        }
    </style>
</head>
<body>
    <h1>إضافة حساب جديد</h1>

    <div class="form-wrapper">
        <form asp-action="Index" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger" style="margin-bottom: 20px; font-weight: bold;"></div>

            <div class="section-title">البيانات الأساسية</div>

            <div class="grid-2">
                <div>
                    <label asp-for="Code">كود الحساب</label>
                    <input asp-for="Code" type="text" required />
                    <span asp-validation-for="Code" style="color: #ef4444; display: block; margin-top: -10px; margin-bottom: 10px;"></span>
                </div>

                <div>
                    <label asp-for="Name">اسم الحساب</label>
                    <input asp-for="Name" type="text" required />
                    <span asp-validation-for="Name" style="color: #ef4444; display: block; margin-top: -10px; margin-bottom: 10px;"></span>
                </div>
            </div>

            <div class="grid-2">
                <div>
                    <label asp-for="AccountType">نوع الحساب</label>
                    <select asp-for="AccountType" required>
                        <option value="">-- اختر نوع الحساب --</option>
                        <option value="Asset">أصول</option>
                        <option value="Liability">خصوم</option>
                        <option value="Equity">حقوق ملكية</option>
                        <option value="Revenue">إيرادات</option>
                        <option value="Expense">مصروفات</option>
                    </select>
                    <span asp-validation-for="AccountType" style="color: #ef4444; display: block; margin-top: -10px; margin-bottom: 10px;"></span>
                </div>

                <div>
                    <label asp-for="Level">المستوى</label>
                    <input asp-for="Level" type="number" min="1" max="10" value="1" />
                </div>
            </div>

            <div class="grid-2">
                <div>
                    <label asp-for="NormalBalance">طبيعة الحساب</label>
                    <select asp-for="NormalBalance">
                        <option value="Debit">مدين</option>
                        <option value="Credit">دائن</option>
                    </select>
                </div>

                <div>
                    <label>خيار إضافي</label>
                    <div class="switch-box">
                        <div class="switch-item">
                            <input asp-for="IsLeaf" type="checkbox" />
                            <label style="margin:0">حساب فرعي (يقبل القيود)</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="section-title">ملاحظات</div>
            <label for="notes">ملاحظات إضافية (اختياري)</label>
            <textarea id="notes" name="Notes" placeholder="ملاحظات حول الحساب — اختياري"></textarea>

            <button type="submit" class="submit-btn">حفظ الحساب</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
