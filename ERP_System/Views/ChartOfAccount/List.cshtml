@model IEnumerable<ERP_System.Models.ChartOfAccount>

@{
    ViewData["Title"] = "دليل الحسابات";
    Func<string, string> TranslateType = t =>
    {
        if (string.IsNullOrWhiteSpace(t)) return "-";
        return t.ToLower() switch
        {
            "asset" => "أصول",
            "liability" => "خصوم",
            "equity" => "حقوق ملكية",
            "revenue" => "إيرادات",
            "expense" => "مصروفات",
            _ => t
        };
    };

    Func<string, string> TranslateBalance = b =>
    {
        if (string.IsNullOrWhiteSpace(b)) return "-";
        return b.ToLower() switch
        {
            "debit" => "مدين",
            "credit" => "دائن",
            _ => b
        };
    };
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <style>
        :root {
            --bg: #0f1724;
            --text: #e6eef6;
            --muted: #94a3b8;
            --accent: #06b6d4;
            --accent-2: #7c3aed;
            --panel: rgba(255,255,255,0.02);
            --panel-strong: rgba(255,255,255,0.04);
            --radius: 12px;
        }

        /* body {
            background: var(--bg);
            color: var(--text);
            font-family: "Segoe UI", Tahoma, sans-serif;
            margin: 0;
            padding: 30px;
            direction: rtl;
        } */

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            margin-bottom: 18px;
            font-size: 32px;
            background: linear-gradient(90deg,var(--accent),var(--accent-2));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
        }

        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 18px;
            background: var(--panel);
            padding: 12px;
            border-radius: var(--radius);
            gap: 12px;
        }

        .search-box {
            padding: 10px 14px;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.06);
            background: rgba(255,255,255,0.03);
            color: var(--text);
            width: 360px;
            box-sizing: border-box;
            outline: none;
        }

        .btn-primary {
            padding: 10px 16px;
            border-radius: 8px;
            background: linear-gradient(90deg,var(--accent),var(--accent-2));
            color: #021024;
            text-decoration: none;
            font-weight: 700;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: var(--panel);
            border-radius: 10px;
            overflow: hidden;
        }

        thead {
            background: var(--panel-strong);
        }

        th, td {
            padding: 12px 14px;
            text-align: right;
            border-bottom: 1px solid rgba(255,255,255,0.04);
            vertical-align: middle;
        }

        th {
            color: var(--accent);
            font-weight: 700;
        }

        tbody tr:hover {
            background: rgba(255,255,255,0.03);
        }

        .badge {
            display: inline-block;
            padding: 6px 10px;
            border-radius: 8px;
            font-weight: 700;
            font-size: 13px;
        }

        .badge-yes {
            background: rgba(16,185,129,0.12);
            color: #10b981;
            border: 1px solid rgba(16,185,129,0.18);
        }

        .badge-no {
            background: rgba(239,68,68,0.08);
            color: #ef4444;
            border: 1px solid rgba(239,68,68,0.12);
        }

        .actions {
            display: flex;
            gap: 8px;
            justify-content: flex-start;
        }

        .btn-action {
            padding: 5px 10px;
            font-size: 14px;
            margin-left: 5px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-edit {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
        }

        .btn-details {
            background: rgba(6, 182, 212, 0.2);
            color: #06b6d4;
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

        .no-data {
            text-align: center;
            padding: 36px;
            color: var(--muted);
        }

        @@media (max-width: 900px) {
            .header-actions

        {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            width: 100%;
        }

        table, thead, tbody, th, td, tr {
            display: block;
        }

        thead {
            display: none;
        }

        tbody tr {
            margin-bottom: 16px;
            border-radius: 10px;
            background: var(--panel-strong);
            padding: 12px;
        }

        td {
            text-align: right;
            border: none;
            padding: 6px 0;
        }

            td .label {
                color: var(--muted);
                display: block;
                font-size: 13px;
                margin-bottom: 6px;
            }

        }
    </style>
</head>
<body>
    <div class="container">
        <h1>دليل الحسابات</h1>

        <div class="header-actions">
            <input id="searchBox" class="search-box" placeholder="ابحث برقم الحساب، الكود، الاسم، أو النوع...">
            <div style="display:flex; gap:10px;">
                <a href="@Url.Action("Index")" class="btn-primary">+ حساب جديد</a>
              
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <table id="coaTable" role="table" aria-label="دليل الحسابات">
                <thead>
                    <tr>
                        <th style="width:8%;">#</th>
                        <th style="width:10%;">كود</th>
                        <th style="width:22%;">اسم الحساب</th>
                        <th style="width:12%;">النوع</th>
                        <th style="width:10%;">طبيعته</th>
                        <th style="width:8%;">المستوى</th>
                        <th style="width:8%;">فرعي</th>
                        <th style="width:8%;">نشط</th>
                        <th style="width:12%;">الملاحظات</th>
                        <th style="width:12%;">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model)
                    {
                        <tr>
                            <td>@account.Id</td>
                            <td>@(String.IsNullOrWhiteSpace(account.Code) ? "-" : account.Code)</td>
                            <td>@(String.IsNullOrWhiteSpace(account.Name) ? "-" : account.Name)</td>
                            <td>@TranslateType(account.AccountType)</td>
                            <td>@TranslateBalance(account.NormalBalance)</td>
                            <td>@(account.Level.ToString() ?? "-")</td>
                            <td>
                                @if (account.IsLeaf == true)
                                {
                                    <span class="badge badge-yes">نعم</span>
                                }
                                else
                                {
                                    <span class="badge badge-no">لا</span>
                                }
                            </td>
                            <td>
                                @if (account.IsActive == true)
                                {
                                    <span class="badge badge-yes">نعم</span>
                                }
                                else
                                {
                                    <span class="badge badge-no">لا</span>
                                }
                            </td>
                            <td style="max-width:200px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">
                                @(string.IsNullOrWhiteSpace(account.Notes) ? "-" : account.Notes)
                            </td>
                            <td>
                                <div class="actions">
                                    <a href="@Url.Action("Details", new { id = account.Id })" class="btn btn-details">عرض</a>
                                    <a href="@Url.Action("Edit", new { id = account.Id })" class="btn btn-edit">تعديل</a>
                                    <form asp-action="Delete" asp-route-id="@account.Id" method="post" class="delete-form"
                                          onsubmit="return confirm('هل أنت متأكد من حذف هذا الحساب ؟');">
                                        <button type="submit" class="btn btn-delete">حذف</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-data">
                لا توجد حسابات معرفة حالياً
            </div>
        }
    </div>

    <script>
        (function () {
            const input = document.getElementById('searchBox');
            const rows = Array.from(document.querySelectorAll('#coaTable tbody tr'));

            if (!input) return;
            input.addEventListener('input', function () {
                const q = this.value.trim().toLowerCase();
                if (!q) {
                    rows.forEach(r => r.style.display = '');
                    return;
                }

                rows.forEach(r => {
                    const text = r.textContent.trim().toLowerCase();
                    r.style.display = text.includes(q) ? '' : 'none';
                });
            });
        })();
    </script>
</body>
</html>
