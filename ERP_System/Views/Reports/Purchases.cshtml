@model ERP_System.ViewModels.ReportsPurchasesVm
@{
    ViewData["Title"] = "تقارير المشتريات";
}

<div class="container-fluid fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">
                <i class="bi bi-graph-up me-2"></i> تقارير المشتريات
            </h2>
            <p class="text-muted">نظرة عامة على أداء المشتريات</p>
        </div>
        <div>
            <button class="btn btn-outline-primary me-2">
                <i class="bi bi-printer"></i> طباعة
            </button>
            <button class="btn btn-primary">
                <i class="bi bi-download"></i> تصدير Excel
            </button>
        </div>
    </div>

    <!-- Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">إجمالي المشتريات</p>
                            <h3 class="fw-bold mb-0">@Model.TotalPurchases.ToString("C")</h3>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-2">
                            <i class="bi bi-cart-check fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span
                            class="@(Model.TotalPurchasesComparisonPercentage >= 0 ? "text-danger" : "text-success") small fw-bold">
                            <i
                                class="bi @(Model.TotalPurchasesComparisonPercentage >= 0 ? "bi-arrow-up" : "bi-arrow-down")"></i>
                            @Math.Abs(Model.TotalPurchasesComparisonPercentage)%
                        </span>
                        <span class="text-muted small">مقارنة بالشهر الماضي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">عدد الفواتير</p>
                            <h3 class="fw-bold mb-0">@Model.InvoiceCount</h3>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success rounded-3 p-2">
                            <i class="bi bi-receipt fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">الإجمالي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">الموردين الجدد</p>
                            <h3 class="fw-bold mb-0">@Model.NewSuppliersCount</h3>
                        </div>
                        <div class="icon-box bg-info bg-opacity-10 text-info rounded-3 p-2">
                            <i class="bi bi-truck fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">هذا الشهر</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">المدفوعات</p>
                            <h3 class="fw-bold mb-0">@Model.TotalPayments.ToString("C")</h3>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-3 p-2">
                            <i class="bi bi-wallet2 fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">إجمالي المدفوعات</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts & Tables Placeholder -->
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">تحليل المشتريات الشهرية</h5>
                </div>
                <div class="card-body">
                    <canvas id="purchasesChart" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">أعلى الموردين تعاملاً</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.TopSuppliers)
                        {
                            <li
                                class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0">
                                @item.Key
                                <span class="badge bg-info rounded-pill">@item.Value.ToString("C")</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('purchasesChart').getContext('2d');
        var purchasesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.MonthlyPurchases.Keys)),
                datasets: [{
                    label: 'المشتريات',
                    data: @Html.Raw(Json.Serialize(Model.MonthlyPurchases.Values)),
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
