@{
    ViewData["Title"] = "تقارير المشتريات";
}

<div class="container-fluid fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">
                <i class="bi bi-graph-up me-2"></i> تقارير المشتريات
            </h2>
            <p class="text-muted">نظرة عامة على أداء المشتريات</p>
        </div>
    <div>
            <button class="btn btn-outline-primary me-2">
                <i class="bi bi-printer"></i> طباعة
            </button>
            <button class="btn btn-primary">
                <i class="bi bi-download"></i> تصدير Excel
            </button>
        </div>
    </div>

    <!-- Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">إجمالي المشتريات</p>
                            <h3 class="fw-bold mb-0">0.00 ج.م</h3>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-2">
                            <i class="bi bi-cart-check fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> 0%</span>
                        <span class="text-muted small">مقارنة بالشهر الماضي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">عدد الفواتير</p>
                            <h3 class="fw-bold mb-0">0</h3>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success rounded-3 p-2">
                            <i class="bi bi-receipt fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> 0%</span>
                        <span class="text-muted small">مقارنة بالشهر الماضي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">الموردين الجدد</p>
                            <h3 class="fw-bold mb-0">0</h3>
                        </div>
                        <div class="icon-box bg-info bg-opacity-10 text-info rounded-3 p-2">
                            <i class="bi bi-truck fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> 0%</span>
                        <span class="text-muted small">مقارنة بالشهر الماضي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">المدفوعات</p>
                            <h3 class="fw-bold mb-0">0.00 ج.م</h3>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-3 p-2">
                            <i class="bi bi-wallet2 fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-danger small fw-bold"><i class="bi bi-arrow-down"></i> 0%</span>
                        <span class="text-muted small">مقارنة بالشهر الماضي</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts & Tables Placeholder -->
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">تحليل المشتريات الشهرية</h5>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-graph-up-arrow text-muted opacity-25" style="font-size: 4rem;"></i>
                    <p class="text-muted mt-3">سيتم عرض الرسم البياني هنا</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">أعلى الموردين تعاملاً</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="bi bi-pie-chart text-muted opacity-25" style="font-size: 4rem;"></i>
                        <p class="text-muted mt-3">لا توجد بيانات كافية</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
