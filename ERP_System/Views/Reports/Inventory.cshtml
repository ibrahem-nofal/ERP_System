@model ERP_System.ViewModels.ReportsInventoryVm
@{
    ViewData["Title"] = "تقارير المخزون";
}

<div class="container-fluid fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">
                <i class="bi bi-box-seam me-2"></i> تقارير المخزون
            </h2>
            <p class="text-muted">نظرة عامة على حالة المخزون</p>
        </div>
        <div>
            <button class="btn btn-outline-primary me-2">
                <i class="bi bi-printer"></i> طباعة
            </button>
            <button class="btn btn-primary">
                <i class="bi bi-download"></i> تصدير Excel
            </button>
        </div>
    </div>

    <!-- Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">قيمة المخزون</p>
                            <h3 class="fw-bold mb-0">@Model.TotalInventoryValue.ToString("C")</h3>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-2">
                            <i class="bi bi-cash-stack fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">تكلفة الشراء</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">عدد الأصناف</p>
                            <h3 class="fw-bold mb-0">@Model.TotalItemsCount</h3>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success rounded-3 p-2">
                            <i class="bi bi-boxes fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">إجمالي الأصناف المعرفة</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">نواقص المخزون</p>
                            <h3 class="fw-bold mb-0 text-danger">@Model.LowStockItemsCount</h3>
                        </div>
                        <div class="icon-box bg-danger bg-opacity-10 text-danger rounded-3 p-2">
                            <i class="bi bi-exclamation-triangle fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-danger small fw-bold">إجراء مطلوب</span>
                        <span class="text-muted small">أصناف (أقل من 10 قطع)</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">حركات المخزون</p>
                            <h3 class="fw-bold mb-0">@Model.InventoryMovementsCount</h3>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-3 p-2">
                            <i class="bi bi-arrow-left-right fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">حركات اليوم</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts & Tables -->
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">حركة المخزون</h5>
                </div>
                <div class="card-body text-center py-5">
                    <!-- Placeholder for movement chart if needed later -->
                    <i class="bi bi-bar-chart-steps text-muted opacity-25" style="font-size: 4rem;"></i>
                    <p class="text-muted mt-3">قريباً</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">توزيع المخزون حسب الفئة</h5>
                </div>
                <div class="card-body">
                    <canvas id="inventoryChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('inventoryChart').getContext('2d');
        var inventoryChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.InventoryByCategory.Keys)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.InventoryByCategory.Values)),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)'
                    ],
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    </script>
}
