@{
    ViewData["Title"] = "تقارير المخزون";
}

<div class="container-fluid fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">
                <i class="bi bi-box-seam me-2"></i> تقارير المخزون
            </h2>
            <p class="text-muted">نظرة عامة على حالة المخزون</p>
        </div>
        <div>
            <button class="btn btn-outline-primary me-2">
                <i class="bi bi-printer"></i> طباعة
            </button>
            <button class="btn btn-primary">
                <i class="bi bi-download"></i> تصدير Excel
            </button>
        </div>
    </div>

    <!-- Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">قيمة المخزون</p>
                            <h3 class="fw-bold mb-0">0.00 ج.م</h3>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-2">
                            <i class="bi bi-cash-stack fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> 0%</span>
                        <span class="text-muted small">مقارنة بالشهر الماضي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">عدد الأصناف</p>
                            <h3 class="fw-bold mb-0">0</h3>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success rounded-3 p-2">
                            <i class="bi bi-boxes fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> 0%</span>
                        <span class="text-muted small">مقارنة بالشهر الماضي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">نواقص المخزون</p>
                            <h3 class="fw-bold mb-0 text-danger">0</h3>
                        </div>
                        <div class="icon-box bg-danger bg-opacity-10 text-danger rounded-3 p-2">
                            <i class="bi bi-exclamation-triangle fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-danger small fw-bold">إجراء مطلوب</span>
                        <span class="text-muted small">أصناف تحت حد الطلب</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">حركات المخزون</p>
                            <h3 class="fw-bold mb-0">0</h3>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-3 p-2">
                            <i class="bi bi-arrow-left-right fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> 0%</span>
                        <span class="text-muted small">اليوم</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts & Tables Placeholder -->
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">حركة المخزون</h5>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-bar-chart-steps text-muted opacity-25" style="font-size: 4rem;"></i>
                    <p class="text-muted mt-3">سيتم عرض الرسم البياني هنا</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">توزيع المخزون حسب الفئة</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="bi bi-pie-chart-fill text-muted opacity-25" style="font-size: 4rem;"></i>
                        <p class="text-muted mt-3">لا توجد بيانات كافية</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
