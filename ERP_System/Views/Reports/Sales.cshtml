@model ERP_System.ViewModels.ReportsSalesVm
@{
    ViewData["Title"] = "تقارير المبيعات";
}

<div class="container-fluid fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">
                <i class="bi bi-bar-chart-line me-2"></i> تقارير المبيعات
            </h2>
            <p class="text-muted">نظرة عامة على أداء المبيعات</p>
        </div>
        <div>
            <button class="btn btn-outline-primary me-2">
                <i class="bi bi-printer"></i> طباعة
            </button>
            <button class="btn btn-primary">
                <i class="bi bi-download"></i> تصدير Excel
            </button>
        </div>
    </div>

    <!-- Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">إجمالي المبيعات</p>
                            <h3 class="fw-bold mb-0">@Model.TotalSales.ToString("C")</h3>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-2">
                            <i class="bi bi-currency-dollar fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span
                            class="@(Model.TotalSalesComparisonPercentage >= 0 ? "text-success" : "text-danger") small fw-bold">
                            <i
                                class="bi @(Model.TotalSalesComparisonPercentage >= 0 ? "bi-arrow-up" : "bi-arrow-down")"></i>
                            @Math.Abs(Model.TotalSalesComparisonPercentage)%
                        </span>
                        <span class="text-muted small">مقارنة بالشهر الماضي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">عدد الفواتير</p>
                            <h3 class="fw-bold mb-0">@Model.InvoiceCount</h3>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success rounded-3 p-2">
                            <i class="bi bi-receipt fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-dash"></i> -</span>
                        <span class="text-muted small">الإجمالي</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">العملاء الجدد</p>
                            <h3 class="fw-bold mb-0">@Model.NewCustomersCount</h3>
                        </div>
                        <div class="icon-box bg-info bg-opacity-10 text-info rounded-3 p-2">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> هذا الشهر</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">متوسط الفاتورة</p>
                            <h3 class="fw-bold mb-0">@Model.AverageInvoiceValue.ToString("C")</h3>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-3 p-2">
                            <i class="bi bi-calculator fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">لكل فاتورة</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts & Tables -->
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">تحليل المبيعات الشهرية</h5>
                </div>
                <div class="card-body">
                    <canvas id="salesChart" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold">الأصناف الأكثر مبيعاً</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.TopSellingItems)
                        {
                            <li
                                class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0">
                                @item.Key
                                <span class="badge bg-primary rounded-pill">@item.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('salesChart').getContext('2d');
        var salesChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.MonthlySales.Keys)),
                datasets: [{
                    label: 'المبيعات',
                    data: @Html.Raw(Json.Serialize(Model.MonthlySales.Values)),
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
