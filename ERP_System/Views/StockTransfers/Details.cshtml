@model ERP_System.Models.StockTransfer

@{
    ViewData["Title"] = "تفاصيل التحويل";
}

<div class="container-fluid px-4">
    <!-- ✅ العنوان -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1 text-primary">
                <i class="bi bi-arrow-left-right"></i> تفاصيل التحويل
            </h3>
            <p class="text-muted">عرض تفاصيل عملية التحويل المخزني</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-right-circle"></i> رجوع للقائمة
        </a>
    </div>

    <!-- ✅ كارت التفاصيل -->
    <div class="card shadow-sm p-4 bg-white rounded-4">
        <div class="row mb-3">
            <div class="col-md-4"><strong>رقم التحويل:</strong> @($"TRF-{Model.Id:D3}")</div>
            <div class="col-md-4"><strong>من مخزن:</strong> @Model.FromWarehouse?.Name</div>
            <div class="col-md-4"><strong>إلى مخزن:</strong> @Model.ToWarehouse?.Name</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4"><strong>التاريخ:</strong> @Model.TransferDate.ToString("yyyy/MM/dd HH:mm")</div>
            <div class="col-md-4">
                <strong>الحالة:</strong>
                <span class="badge @(Model.Status == "تم التحويل" ? "bg-success" : "bg-warning text-dark")">
                    @Model.Status
                </span>
            </div>
            <div class="col-md-4"><strong>الملاحظات:</strong> @Model.Notes</div>
        </div>

        <hr />

        <!-- ✅ جدول المنتجات -->
        <h5 class="fw-bold mb-3">المنتجات المحولة</h5>
        <table class="table table-bordered text-center align-middle">
            <thead class="table-light">
                <tr>
                    <th>اسم المنتج</th>
                    <th>الكمية</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Product?.Name</td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- ✅ زر تأكيد التحويل -->
        <hr />
        <div class="text-end mt-3">
            @if (Model.Status != "تم التحويل")
            {
                <form asp-action="ConfirmTransfer" method="post" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> تأكيد التحويل
                    </button>
                </form>
            }
            else
            {
                <span class="badge bg-success px-3 py-2">
                    ✅ تم تأكيد التحويل بالفعل
                </span>
            }
        </div>
    </div>
</div>
