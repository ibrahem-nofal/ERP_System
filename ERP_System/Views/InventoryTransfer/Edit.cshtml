@model ERP_System.Models.InvoiceTransferHeader

@{
    ViewData["Title"] = "تعديل التحويل";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <style>
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            margin-bottom: 30px;
            text-align: center;
        }

        h1 {
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 10px;
        }

        .card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
            backdrop-filter: blur(10px);
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            color: #e2e8f0;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #fff;
            font-size: 1rem;
        }

        .form-control:focus {
            outline: none;
            border-color: #06b6d4;
            background: rgba(255, 255, 255, 0.1);
        }

        select.form-control {
            background-color: rgba(0, 0, 0, 0.3);
            color: white;
        }

        select.form-control option {
            background-color: #1e293b;
            color: white;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th,
        td {
            padding: 12px;
            text-align: right;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        th {
            color: #94a3b8;
            font-weight: 500;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #06b6d4, #7c3aed);
            color: white;
        }

        .btn-success {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
            border: 1px solid rgba(16, 185, 129, 0.3);
        }

        .btn-danger {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.3);
            padding: 5px 10px;
        }

        .btn-secondary {
            background: rgba(148, 163, 184, 0.2);
            color: #94a3b8;
            border: 1px solid rgba(148, 163, 184, 0.2);
        }

        .btn-container {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .btn-container .btn {
            flex: 1;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="page-header">
            <h1>تعديل التحويل #@Model.Code</h1>
        </div>

        <form asp-action="Edit" method="post">
            <div class="card">
                <h3 style="color: #e2e8f0; margin-bottom: 20px;">بيانات التحويل</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Code" />
                <input type="hidden" asp-for="Date" />
                <input type="hidden" asp-for="AssignedBy" />

                <div class="form-grid">
                    <div class="form-group">
                        <label asp-for="FromStoreId">من مخزن</label>
                        <select asp-for="FromStoreId" class="form-control" asp-items="ViewBag.Stores">
                            <option value="">-- اختر المخزن --</option>
                        </select>
                        <span asp-validation-for="FromStoreId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ToStoreId">إلى مخزن</label>
                        <select asp-for="ToStoreId" class="form-control" asp-items="ViewBag.Stores">
                            <option value="">-- اختر المخزن --</option>
                        </select>
                        <span asp-validation-for="ToStoreId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                    <h3 style="color: #e2e8f0; margin: 0;">الأصناف</h3>
                    <button type="button" class="btn btn-success" id="addRow">+ إضافة صنف</button>
                </div>

                <table id="itemsTable">
                    <thead>
                        <tr>
                            <th width="60%">الصنف</th>
                            <th width="30%">الكمية</th>
                            <th width="10%"></th>
                        </tr>
                    </thead>
                    <tbody id="itemsBody">
                        @if (Model.Details != null && Model.Details.Any())
                        {
                            foreach (var detail in Model.Details)
                            {
                                <tr>
                                    <td>
                                        <select name="ItemIds" class="form-control item-select">
                                            <option value="">-- اختر الصنف --</option>
                                            @foreach (var item in ViewBag.Items)
                                            {
                                                if (item.GetType().GetProperty("Id").GetValue(item, null).ToString() ==
                                                detail.ItemId.ToString())
                                                {
                                                    <option value="@item.GetType().GetProperty("Id").GetValue(item, null)" selected>
                                                        @item.GetType().GetProperty("Name").GetValue(item, null)</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.GetType().GetProperty("Id").GetValue(item, null)">
                                                        @item.GetType().GetProperty("Name").GetValue(item, null)</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <input type="number" name="Quantities" class="form-control" min="1"
                                            value="@detail.Quantity" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger remove-row">x</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    <select name="ItemIds" class="form-control item-select">
                                        <option value="">-- اختر الصنف --</option>
                                        @foreach (var item in ViewBag.Items)
                                        {
                                            <option value="@item.GetType().GetProperty("Id").GetValue(item, null)">
                                                @item.GetType().GetProperty("Name").GetValue(item, null)</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <input type="number" name="Quantities" class="form-control" min="1" value="1" />
                                </td>
                                <td>
                                    <button type="button" class="btn btn-danger remove-row">x</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card">
                <div class="form-group">
                    <label asp-for="Remarks">ملاحظات</label>
                    <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>

                <div class="btn-container">
                    <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
                    <a asp-action="List" class="btn btn-secondary">إلغاء</a>
                </div>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            $(document).ready(function () {
                // Add new row
                $("#addRow").click(function () {
                    var newRow = $("#itemsBody tr:first").clone();
                    newRow.find("input").val("1");
                    // Clear selection in the cloned row
                    newRow.find("select option:selected").removeAttr("selected");
                    newRow.find("select").val("");
                    $("#itemsBody").append(newRow);
                });

                // Remove row
                $(document).on("click", ".remove-row", function () {
                    if ($("#itemsBody tr").length > 1) {
                        $(this).closest("tr").remove();
                    } else {
                        alert("يجب أن يحتوي التحويل على صنف واحد على الأقل");
                    }
                });
            });
        </script>
    }
</body>

</html>
