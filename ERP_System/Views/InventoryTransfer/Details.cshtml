@model ERP_System.Models.InvoiceTransferHeader

@{
    ViewData["Title"] = "تفاصيل التحويل";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <style>
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        h1 {
            background: linear-gradient(90deg, #06b6d4, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
        }

        .card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
            backdrop-filter: blur(10px);
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 24px;
        }

        .info-item label {
            display: block;
            color: #94a3b8;
            font-size: 0.875rem;
            margin-bottom: 8px;
        }

        .info-item span {
            display: block;
            color: #e2e8f0;
            font-size: 1.1rem;
            font-weight: 500;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 16px;
            text-align: right;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        th {
            color: #94a3b8;
            font-weight: 500;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        td {
            color: #e2e8f0;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(135deg, #06b6d4, #3b82f6);
            color: white;
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .btn:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="page-header">
            <div>
                <h1>تفاصيل التحويل #@Model.Code</h1>
                <p style="color: #94a3b8; margin-top: 5px;">تاريخ الإنشاء: @Model.Date.ToString("yyyy/MM/dd HH:mm")</p>
            </div>
            <div style="display: flex; gap: 10px;">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> تعديل
                </a>
                <a asp-action="List" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> عودة للقائمة
                </a>
            </div>
        </div>

        <div class="card">
            <div class="info-grid">
                <div class="info-item">
                    <label>من مخزن</label>
                    <span style="color: #ef4444;">@(Model.FromStore?.Name ?? "-")</span>
                </div>
                <div class="info-item">
                    <label>إلى مخزن</label>
                    <span style="color: #10b981;">@(Model.ToStore?.Name ?? "-")</span>
                </div>
                <div class="info-item">
                    <label>بواسطة</label>
                    <span>@(Model.AssignedByEmployee?.Name ?? "-")</span>
                </div>
            </div>
        </div>

        <div class="card">
            <h3 style="color: #e2e8f0; margin-bottom: 20px;">الأصناف المحولة</h3>
            <div style="overflow-x: auto;">
                <table>
                    <thead>
                        <tr>
                            <th>الصنف</th>
                            <th>الكمية</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Details != null && Model.Details.Any())
                        {
                            foreach (var item in Model.Details)
                            {
                                <tr>
                                    <td>@(item.Item?.Name ?? "-")</td>
                                    <td>@item.Quantity</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" style="text-align: center; color: #94a3b8;">لا توجد أصناف</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Remarks))
        {
            <div class="card">
                <h3 style="color: #e2e8f0; margin-bottom: 10px;">ملاحظات</h3>
                <p style="color: #94a3b8;">@Model.Remarks</p>
            </div>
        }
    </div>
</body>

</html>
