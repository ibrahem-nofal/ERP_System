@model ERP_System.ViewModels.AddExpenseNameVm
@{
    ViewBag.Title = "إضافة بند مصروف";
}

<!doctype html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>إضافة بند مصروف</title>

    <style>
        :root {
            --bg: #0f1724;
            --panel: rgba(255, 255, 255, 0.07);
            --panel-light: rgba(255, 255, 255, 0.1);
            --border: rgba(255, 255, 255, 0.20);
            --text: #e6eef6;
            --muted: #9ca3af;
            --gradient: linear-gradient(90deg, #06b6d4, #7c3aed);
            --radius: 18px;
        }

        body {
            background: var(--bg);
            margin: 0;
            padding: 35px;
            font-family: "Segoe UI", Tahoma, sans-serif;
            color: var(--text);
            direction: rtl;
        }

        h1 {
            text-align: center;
            font-size: 38px;
            margin-bottom: 35px;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }

        .form-wrapper {
            width: 100%;
            max-width: 800px;
            margin: auto;
            background: var(--panel);
            padding: 40px;
            border-radius: var(--radius);
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.45);
        }

        label {
            font-size: 22px;
            margin-bottom: 8px;
            display: block;
            font-weight: 600;
        }

        input,
        textarea {
            width: 100%;
            background: var(--panel-light);
            border: 2px solid var(--border);
            border-radius: var(--radius);
            padding: 18px;
            font-size: 20px;
            color: var(--text);
            margin-bottom: 20px;
            outline: none;
        }

        textarea {
            height: 160px;
            resize: none;
        }

        .submit-btn {
            width: 100%;
            padding: 20px;
            font-size: 24px;
            margin-top: 15px;
            background: var(--gradient);
            border: none;
            border-radius: var(--radius);
            font-weight: bold;
            color: #021024;
            cursor: pointer;
            transition: 0.2s;
        }

        .submit-btn:hover {
            transform: translateY(-3px);
            opacity: 0.9;
        }

        @@media(max - width:900px) {

            input,
            textarea {
                font-size: 18px;
                padding: 14px;
            }

            h1 {
                font-size: 32px;
            }

        }
    </style>
</head>

<body>

    <h1>إضافة بند مصروف</h1>

    <div class="form-wrapper">
        <form asp-action="Index" method="post">
            @Html.AntiForgeryToken()

            <label asp-for="Name">اسم بند المصروف</label>
            <input asp-for="Name" placeholder="مثال: مصروف كهرباء / مصروف صيانة ...">
            <span asp-validation-for="Name"
                style="color: #ef4444; display: block; margin-top: -15px; margin-bottom: 15px;"></span>

            <label asp-for="Detail">تفاصيل بند المصروف</label>
            <textarea asp-for="Detail" placeholder="اكتب تفاصيل المصروف هنا..."></textarea>
            <span asp-validation-for="Detail"
                style="color: #ef4444; display: block; margin-top: -15px; margin-bottom: 15px;"></span>

            <button class="submit-btn">حفظ البند</button>
        </form>
    </div>

</body>

</html>
